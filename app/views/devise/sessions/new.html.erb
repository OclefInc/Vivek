<div class="flex flex-row justify-center">
  <div class="border-sky-300 bg-sky-50 dark:border-sky-800 border-2 shadow-lg dark:bg-zinc-900 rounded-xl px-5 py-5">
    <h2 class="text-center text-sky-800 dark:text-sky-300 text-2xl tracking-wider" >Sign In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-sky-800 dark:text-sky-300 mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["block w-full dark:bg-zinc-900 dark:text-zinc-300 shadow-sm rounded-xl px-3 py-2 outline-sky-400 dark:border dark:border-zinc-700 focus:outline-2 dark:outline-sky-500" ]  %>
      </div>
      <div class="field text-sky-800 dark:text-sky-300 mb-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: ["block w-full dark:bg-zinc-900 dark:text-zinc-300 shadow-sm rounded-xl px-3 py-2 outline-sky-400 dark:border dark:border-zinc-700 focus:outline-2 dark:outline-sky-500"] %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field text-sky-800 dark:text-sky-300 mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions text-center">
        <%= f.submit "Submit", class: "w-auto rounded-xl px-3 py-2 bg-indigo-600 hover:bg-indigo-400 text-white inline-block font-medium cursor-pointer text-center tracking-wider"  %>
      </div>
    <% end %>
    <div class="flex-col justify-items-center">
      <%= render "devise/shared/links" %>
    </div>
    <!-- OAuth Sign In Options -->
    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-sky-300 dark:border-sky-800"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-sky-50 dark:bg-zinc-900 text-sky-600 dark:text-sky-400">Or continue with</span>
        </div>
      </div>
      <div class="mt-6 flex flex-col gap-3">
        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full inline-flex items-center justify-center gap-3 py-3 px-4 border border-gray-300 dark:border-zinc-700 rounded-xl shadow-sm bg-white dark:bg-zinc-800 hover:bg-gray-50 dark:hover:bg-zinc-700 transition-all group" do %>
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#EA4335" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#4285F4" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 dark:text-gray-200">Continue with Google</span>
        <% end %>
        <%= button_to user_apple_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full inline-flex items-center justify-center gap-3 py-3 px-4 border border-gray-900 dark:border-white rounded-xl shadow-sm bg-black dark:bg-white hover:bg-gray-900 dark:hover:bg-gray-100 transition-all group" do %>
          <svg class="w-5 h-5 text-white dark:text-black" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.06-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
          </svg>
          <span class="text-sm font-semibold text-white dark:text-black">Continue with Apple</span>
        <% end %>
        <%= button_to user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "w-full inline-flex items-center justify-center gap-3 py-3 px-4 border border-[#1877F2] rounded-xl shadow-sm bg-[#1877F2] hover:bg-[#166FE5] transition-all group" do %>
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          <span class="text-sm font-semibold text-white">Continue with Facebook</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
