<div data-controller="sortable chapter-highlight">
  <table class="w-full table-auto border-collapse">
    <thead>
      <tr>
        <th class="text-left px-2 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Clip</th>
        <th class="text-left px-2 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Lesson</th>
        <th class="text-left px-2 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200"></th>
      </tr>
    </thead>
    <tbody data-sortable-target="tbody">
      <% chapters_tutorials.each_with_sortable_id do |chapters_tutorial, sortable_id| %>
        <tr id="<%= sortable_id %>" data-chapter-highlight-target="row">
          <td class="text-left px-2 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300">
            <%= link_to chapters_tutorial.chapter.name,
                tutorial_chapter_path(chapters_tutorial.tutorial, chapters_tutorial.chapter),
                class: "text-blue-500 hover:text-red-500 dark:text-blue-400 dark:hover:text-red-400",
                data: { turbo_stream: true, action: "click->chapter-highlight#highlight" } %>
          </td>
          <td class="text-left px-2 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300">
            <%= chapters_tutorial.chapter.lesson.name %>
          </td>
          <td class="text-right py-2 border-b border-gray-300 dark:border-gray-600">
            <%= button_to chapters_tutorial, method: :delete, form: { data: { turbo_confirm: "Remove this chapter from tutorial?" } }, class: "text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-3 mb-3 flex justify-between items-center gap-2">
    <label class="relative inline-flex items-center cursor-pointer">
      <input type="checkbox" class="sr-only peer" data-action="change->sortable#toggle">
      <div class="w-11 h-6 bg-gray-200 dark:bg-gray-700 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 dark:after:border-gray-600 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
      <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-200">Enable Sorting</span>
    </label>
  </div>
</div>