<% current_lesson ||= nil %>
<div data-controller="sortable">
  <div class="mt-3 flex justify-between items-center gap-2">
    <div class="">
      <%= turbo_frame_tag "assignment_#{assignment.id}_teacher" do %>
        <span>Default Teacher:</span> <%= link_to edit_assignment_path(assignment, field: :teacher), class: "text-blue-600 hover:text-blue-500 text-sm inline-flex items-center", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
        <% if assignment.teacher.present? %>
          <%= link_to assignment.teacher.name, assignment.teacher, class:'text-blue-600 hover:text-blue-400' %>
        <% else%>
          <span class="text-gray-400 italic">Click to set</span>
        <% end %>
      <% end %>
    </div>
    <label class="relative inline-flex items-center cursor-pointer">
      <input type="checkbox" class="sr-only peer" data-action="change->sortable#toggle">
      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
      <span class="ms-3 text-sm font-medium text-gray-900">Enable Sorting</span>
    </label>
  </div>
  <table class="w-full">
    <thead>
      <tr>
        <th class="text-left md:px-3 py-2 border-b border-gray-300">Lesson</th>
        <th class="text-left md:px-3 py-2 border-b border-gray-300">Status</th>
      </tr>
    </thead>
    <tbody data-sortable-target="tbody">
      <% lessons.order(:sort).each_with_sortable_id do |lesson, sortable_id| %>
        <tr id="<%= sortable_id %>" class="<%= 'bg-yellow-100' if current_lesson && lesson.id == current_lesson.id %>">
          <td class="text-left md:px-3 py-2 border-b border-gray-300">
            <span id="lesson_<%= lesson.id %>_name_in_table">
              <%= link_to lesson.name, lesson, class:"text-blue-500 hover:text-red-500" %>
            </span>
          </td>
          <td class="text-left md:px-3 py-2 border-b border-gray-300"><%= lesson.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
