<% ga_id = Rails.application.credentials.dig(:google_analytics_id) || ENV["GOOGLE_ANALYTICS_ID"] %>
<% if ga_id.present? %>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= ga_id %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= ga_id %>');
  </script>
<% end %>
