  <%= turbo_frame_tag "tutorial_#{tutorial.id}_video_file" do %>
  <div class="bg-black flex items-center justify-center aspect-[4/3] xl:aspect-auto xl:max-w-[640px] xl:h-[480px] relative group"
           data-controller="video-poster video-player"
           data-video-player-chapters-value="<%= tutorial.chapters.to_json(only: [:start_time, :name]) %>">
    <%= video_tag tutorial.video_file,
          controls: false,
          preload: "metadata",
          class: "w-full h-full object-contain",
          data: {
            controller: "video-autoplay",
            video_poster_target: "video",
            video_player_target: "video",
            action: "click->video-player#togglePlay"
          } %>
    <div data-video-poster-target="overlay" class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none  bg-black">
      <h2 class="text-white text-3xl font-bold text-center px-8"><%= tutorial.name %></h2>
      <p class="text-gray-300 text-xl mt-3"><%= tutorial.teacher.name %></p>
    </div>
    <%= render 'shared/video_player_controls' %>
  </div>
  <div class="text-center">
    <%= link_to edit_tutorial_path(tutorial, field: :video_file), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm" do %>
      <span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg> Video</span>
    <% end %>
  </div>
<% end %>