<%= form_with(model: assignment, html: { onkeydown: "return event.key != 'Enter';" }) do |form| %>
  <% if assignment.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900 text-red-500 dark:text-red-200 px-3 py-2 rounded-md">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>
      <ul>
        <% assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :project_name, class: "dark:text-gray-200", style: "display: block" %>
    <%= form.text_field :project_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full dark:bg-gray-800 dark:text-gray-200", {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": assignment.errors[:project_name].none?, "border-red-400 dark:border-red-600 focus:outline-red-600": assignment.errors[:project_name].any?}] %>
  </div>
  <div class="mb-4">
    <%= form.label :project_type, class: "dark:text-gray-200", style: "display: block" %>
    <%= form.collection_select :project_type_id, ProjectType.order(:name), :id, :name, { include_blank: true }, { class: "block shadow rounded-md border border-gray-200 dark:border-gray-600 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-800 dark:text-gray-200" } %>
  </div>
  <div class="mb-4">
    <%= form.label :student, class: "dark:text-gray-200", style: "display: block" %>
    <select name="assignment[student_name]"
            data-controller="searchable-select"
            data-searchable-select-placeholder-value="Select or type student name..."
            class="block outline-none dark:bg-gray-800 dark:text-gray-200 dark:border-gray-600">
      <option value=""></option>
      <% Student.order(:name).each do |student| %>
        <option value="<%= student.name %>" <%= 'selected' if assignment.student_id == student.id %>><%= student.name %></option>
        <% end %>
      </select>
    </div>
    <div>
      <%= form.label :description, class: "dark:text-gray-200", style: "display: block" %>
      <%= form.rich_text_area :description,
      class: "block shadow rounded-md border border-gray-200 dark:border-gray-600 outline-none px-3 py-2 mt-2 mb-4 w-full dark:bg-gray-800 dark:text-gray-200" %>
    </div>
    <div class="my-2">
      <%= form.submit class: "rounded-lg py-2 px-3 bg-blue-600 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
