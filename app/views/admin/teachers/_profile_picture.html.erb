  <%= turbo_frame_tag "teacher_#{teacher.id}_profile_picture" do %>
    <div class="flex flex-col items-center justify-center">
      <div class="rounded-full overflow-hidden mx-auto border border-gray-300 dark:border-gray-600">
        <% if teacher.profile_picture.attached? %>
          <%= image_tag teacher.profile_picture.variant(resize_to_fill: [300, 300]), class:"object-cover" %>
        <% else %>
          <div class="aspect-square w-[300px]  overflow-hidden ">
            <svg class="text-gray-400" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="8" r="4"/>
              <path d="M2 19c0-2.5 4-5 10-5s10 2.5 10 5v5H2v-5z"/>
            </svg>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= link_to edit_teacher_path(teacher, field: :profile_picture), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm" do %>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg> Profile</span>
      <% end %>
    </div>
  <% end %>