
<div class="flex flex-row justify-center">
<div class="border border-sky shadow-lg bg-sky-50 rounded-xl px-5 py-5 ">
<h2 class="font-bold text-xl text-center tracking-wider" >Log in </h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full sm:w-auto bg-white shadow-sm rounded-lg border-2 border-blue-900 px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "block w-full sm:w-auto bg-white shadow-sm rounded-lg border-2 border-blue-900 px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field px-2 py-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full sm:w-auto rounded-lg px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
