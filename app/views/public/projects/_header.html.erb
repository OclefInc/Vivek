<div class="">
  <div class="mb-4 text-center">
    <p class="text-slate-900 dark:text-teal-200 text-xl sm:text-2xl font-medium  break-words">
      <%= link_to(project.composition.name, project_path(project), class:' dark:text-teal-200  hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words') %>
    </p>
  </div>
  <!-- Student and Teachers Info - Stack on mobile, side by side on larger screens -->
  <div class="flex items-center justify-center gap-2 text-slate-700 dark:text-slate-300 text-sm sm:text-base lg:text-lg">
    <div class="flex items-center gap-2">
      <% if project.student.display_avatar(size: 32) %>
        <%= image_tag project.student.display_avatar(size: 32), class: "w-8 h-8 rounded-full object-cover border border-gray-200 dark:border-gray-700" %>
      <% end %>
      <%= link_to project.student.name, public_student_path(project.student), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
    </div>
  </div>
</div>
<% if user_signed_in? && !project.complete? %>
  <turbo-frame id="subscription_frame">
    <div class="flex justify-center my-4">
      <div class="bg-yellow-100 dark:bg-yellow-900/30 border-l-4 border-yellow-500 text-yellow-700 dark:text-yellow-400 px-4 py-2 rounded shadow-sm flex items-center gap-4" role="alert">
        <div>
          <span class="font-semibold">Ongoing Project:</span>  Lessons are still being added.
        </div>
        <% if project.subscriptions.exists?(user: current_user) %>
          <%= button_to "Unsubscribe", project_subscription_path(project), method: :delete, class: "text-xs px-3 py-1 bg-yellow-200 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-200 rounded-full hover:bg-yellow-300 dark:hover:bg-yellow-700 transition font-medium" %>
        <% else %>
          <%= button_to "Subscribe To Updates", project_subscription_path(project), method: :post, class: "text-xs px-3 py-1 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium shadow-sm" %>
        <% end %>
      </div>
    </div>
  </turbo-frame>
<% end %>