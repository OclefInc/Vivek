<p style="color: green"><%= notice %></p>
<h1 class="font-bold text-3xl">Assignment:</h1>
<%= render @assignment %>
<div class="lg:flex md:flex-wrap justify-end ">
  <%= link_to "Edit this assignment", edit_assignment_path(@assignment), class: "sm:w-auto text-center rounded-lg px-3 py-2 m-1 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "All assignments", assignments_path, class: "sm:w-auto text-center rounded-lg px-3 py-2 m-1 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Delete this assignment", @assignment, method: :delete, class: "sm:w-auto rounded-lg px-3 py-2 m-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
<h1 class="text-2xl text-red-500">Assignment Lessons:</h1>
<div class="max-w-5xl mx-auto px-8 py-4">
  <table class="w-full table-auto border-collapse">
    <tr>
      <th class="text-left px-3 py-2 border-b border-gray-300">Name</th>
      <th class="text-left px-3 py-2 border-b border-gray-300">Status</th>
    </tr>
    <% @assignment.lessons.each do |lesson| %>
      <tr>
        <td class="text-left px-3 py-2 border-b border-gray-300"><%= link_to lesson.name, lesson, class:"text-blue-500 hover:text-red-500"  %></td>
        <td class="text-left px-3 py-2 border-b border-gray-300"><%= lesson.status %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="lg:flex md:flex-wrap">
  <%= link_to "Add New Lesson", new_lesson_path({assignment_id:@assignment.id}), class: "rounded-lg px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white font-medium" %>
</div>
