<div class="max-w-7xl mx-auto space-y-6">
  <!-- Main Episode Card -->
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <div class="bg-sky-50 dark:bg-zinc-900 px-6 pt-6 pb-1">
      <%= render 'header' %>
    </div>
    <div class="bg-sky-50 dark:bg-zinc-900 xl:flex xl:gap-6 p-6 space-y-8 xl:space-y-0" style="min-height: 600px;">
      <div class="xl:flex-1 xl:h-full">
        <%= render 'video_description' %>
      </div>
      <div class="xl:flex-1 xl:h-full">
        <%= render 'episode_table' %>
      </div>
    </div>
  </div>
  <!-- Comments Section -->
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <%= render partial:"/comments/module", locals:{annotation:@episode} %>
  </div>
</div>
