<% content_for :title, 'Episode' %>
<%= render 'header' %>
<div class="xl:flex xl:gap-8 py-4" data-controller="episode-layout">
  <div class="xl:min-w-[640px] xl:max-w-[640px] md:flex-1 md:basis-1/2 mb-4 xl:mb-0" data-episode-layout-target="videoDescription">
    <%= render 'video_description' %>
  </div>
  <div class="w-full xl:flex-1 xl:basis-1/2 xl:self-start overflow-y-auto" data-episode-layout-target="episodeTable">
    <%= render 'episode_table' %>
  </div>
</div>
<!-- Comments Section -->
<div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
  <%= render partial:"/public/comments/module", locals:{annotation:@episode} %>
</div>