<div class="flex justify-between items-center" id="<%= dom_id @episode %>">
  <div class="text-3xl text-bold">
    <%= @episode.name %>
  </div>
  <div class="text-xl text-semibold" >
    Assignment: <span> <%= link_to @episode.assignment.name, @episode.assignment, class:"text-blue-600 text-bold hover:text-blue-400 px-1 py-1" %> </span>
  </div>
</div>
<p>
  <%= image_tag @episode.lesson_video if @episode.lesson_video.attached? %>
</p>
<div class="flex px-4 py-6">
  <div class="w-2/3 flex-auto">
    <strong>Description:</strong>
    <%= @episode.description %>
  </div>
  <div class="w-1/3 flex-auto">
    <p class="font-bold"> Skills: </p>
    <%= @episode.skills.map{|skill| link_to(skill.name, skill, class:"text-blue-700 hover:text-blue-400")}.join(', ').html_safe %>
  </div>
</div>
<div class="flex px-4 py-4 ">
  <div class="flex-auto border border-sky-100 rounded-2xl outline-2 outline-offset-2 outline-sky-200 mx-3 my-3 px-3 py-3" >
    <strong>Student Reflection:</strong>
    <%= @episode.student_journal %>
  </div>
  <div class="flex-auto border border-sky-100 rounded-2xl outline-2 outline-offset-2 outline-sky-200 mx-3 my-3 px-3 py-3" >
    <strong>Teacher Comments:</strong>
    <%= @episode.teacher_journal %>
  </div>
</div>
<%= form_with(model: Comment.new(annotation:@episode)) do |form| %>
  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.rich_text_area :note,
      class: "block shadow rounded-2xl border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <%= form.hidden_field :annotation_id %>
  <%= form.hidden_field :annotation_type %>
  <div>
    <div class="inline">
      <%= form.submit class: "w-full sm:w-auto rounded-lg my-2 px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
