<div class="bg-gray-800 text-white p-4">
  <div class="flex justify-between">
    <%= link_to edit_journal_journal_entry_path(@journal_entry.journal, @journal_entry, field: :entry_video), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm" do %>
      <span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg> Video</span>
    <% end %>
    <span class="text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm"  data-action="click->video-time#toggleForm">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg> Trim</span>
  </div>
  <%= form_with(model: @journal_entry, url: journal_journal_entry_path(@journal_entry.journal, @journal_entry), data: { video_time_target: "form" }, class:"hidden") do |form| %>
    <div class="flex justify-between gap-4 mt-2">
      <div>
        <div class="flex items-center gap-2">
          <%= form.label :video_start_time, "Start Time:", class: "block text-sm" %>
          <span data-video-time-target="startDisplay" class="text-sm">
            <%= @journal_entry.video_start_time ? "#{@journal_entry.video_start_time}s" : "Not set" %>
          </span>
          <button type="button"
                    data-action="click->video-time#setStartTime"
            class="px-2 py-1 bg-blue-600 hover:bg-blue-500 rounded-lg text-sm font-medium">
            Set Start
          </button>
        </div>
        <%= form.hidden_field :video_start_time, data: { video_time_target: "startTime" } %>
      </div>
      <div>
        <div class="flex items-center gap-2">
          <%= form.label :video_end_time, "End Time:", class: "block text-sm" %>
          <span data-video-time-target="endDisplay" class="text-sm">
            <%= @journal_entry.video_end_time ? "#{@journal_entry.video_end_time}s" : "Not set" %>
          </span>
          <button type="button"
                    data-action="click->video-time#setEndTime"
            class="px-2 py-1 bg-blue-600 hover:bg-blue-500 rounded-lg text-sm font-medium">
            Set End
          </button>
        </div>
        <%= form.hidden_field :video_end_time, data: { video_time_target: "endTime" } %>
      </div>
    </div>
  <% end %>
</div>