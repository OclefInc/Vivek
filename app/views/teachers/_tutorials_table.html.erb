<h4 class="font-bold text-2xl dark:text-gray-200">Tutorials</h4>
<table class="w-full table-auto border-collapse">
  <thead>
    <tr>
      <th class="text-left md:px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Name</th>
      <th class="text-left md:px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Views</th>
    </tr>
  </thead>
  <tbody>
    <% teacher.tutorials.sort_by(&:name).each do |tutorial| %>
      <tr>
        <td class="text-left md:px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= link_to tutorial.name, tutorial, class:"text-blue-500 hover:text-red-500 dark:text-blue-400 dark:hover:text-red-400" %></td>
        <td class="text-left md:px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= tutorial.views %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with(model: teacher.tutorials.build) do |form| %>
  <div class="dropzone dropzone-default dz-clickable border border-gray-300 dark:border-gray-600 rounded p-4 dark:bg-gray-800" data-controller="dropzone" data-dropzone-max-file-size="10000000" data-dropzone-accepted-files="video/*" data-turbo-permanent>
    <%= form.file_field :video_file, direct_upload: true, data: { 'dropzone-target': "input", 'dropzone-capture-mode-value': 'environment', autosubmit: true, turbosubmit: true, camera: false } %>
    <div class="dropzone-msg dz-message needsclick">
      <h3 class="dropzone-msg-title dark:text-gray-200">Drag Video Tutorial File Here</h3>
      <span class="dropzone-msg-desc dark:text-gray-300">Click To Browse</span>
    </div>
  </div>
  <%= form.hidden_field :teacher_id %>
  <input type="hidden" name="return_url" value="<%= request.fullpath %>">
  <%= form.submit class: "w-full sm:w-auto rounded-lg my-2 px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
<% end %>