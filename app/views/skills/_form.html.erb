<%= form_with(model: skill, class: "contents") do |form| %>
  <% if skill.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>
      <ul class="list-disc ml-6">
        <% skill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": skill.errors[:name].none?, "border-red-400 focus:outline-red-600": skill.errors[:name].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :skill_category_id %>
    <%= form.collection_select :skill_category_id, SkillCategory.order(:name), :id, :name, {},
      { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-lg px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
