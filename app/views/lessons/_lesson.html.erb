<div class="flex justify-between items-center" id="<%= dom_id lesson %>">
  <div class="text-3xl text-bold">
    <%= lesson.name %>
  </div>
  <div class="text-xl text-semibold" >
    Assignment: <span> <%= link_to lesson.assignment.name, lesson.assignment, class:"text-blue-600 text-bold hover:text-blue-400 px-1 py-1" %> </span>
  </div>
</div>
<p>
  <%= image_tag lesson.lesson_video if lesson.lesson_video.attached? %>
</p>
<div class="flex px-4 py-6">
  <div class="w-2/3 flex-auto">
    <strong>Description:</strong>
    <%= lesson.description %>
  </div>
  <div class="w-1/3 flex-auto">
    <p class="font-bold"> Skills: </p>
    <%= lesson.skills.map{|skill| link_to(skill.name, skill, class:"text-blue-700 hover:text-blue-400")}.join(', ').html_safe %>
  </div>
</div>
<div class="flex px-4 py-4 ">
  <div class="flex-auto border border-sky-100 rounded-2xl outline-2 outline-offset-2 outline-sky-200 mx-3 my-3 px-3 py-3" >
    <strong>Student Reflection:</strong>
    <%= lesson.student_journal %>
  </div>
  <div class="flex-auto border border-sky-100 rounded-2xl outline-2 outline-offset-2 outline-sky-200 mx-3 my-3 px-3 py-3" >
    <strong>Teacher Comments:</strong>
    <%= lesson.teacher_journal %>
  </div>
</div>
