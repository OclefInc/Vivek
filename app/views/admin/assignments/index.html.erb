<%= render layout: "shared/index_layout",
           locals: {
             title: "Projects",
             search_url: assignments_path,
             turbo_frame: "assignments-table",
             search_placeholder: "Search for projects",
             new_button_text: "Add new project",
             new_path: new_assignment_path
           } do %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @assignments.each do |assignment| %>
      <% cache assignment do %>
        <%= link_to assignment, class: "block" do %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- Profile Picture Section -->
            <div class="bg-gradient-to-br from-blue-500 to-purple-600 flex flex-col items-center justify-center py-8" style="min-height: 240px;">
              <% teachers = assignment.teachers.distinct %>
              <% if teachers.any? %>
                <div class="flex gap-2 mb-3">
                  <% teachers.first(3).each do |teacher| %>
                    <div class="rounded-full overflow-hidden w-20 h-20 border border-white shadow-lg flex items-center justify-center">
                      <% if teacher.profile_picture&.attached? %>
                        <%= image_tag teacher.profile_picture.variant(resize_to_fill: [80, 80]), class: "w-full h-full object-cover" %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center bg-gray-100">
                          <div class="aspect-square w-[80px]  overflow-hidden ">
                            <svg class="text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                              <circle cx="12" cy="8" r="4"/>
                              <path d="M2 19c0-2.5 4-5 10-5s10 2.5 10 5v5H2v-5z"/>
                            </svg>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                  <% if teachers.count > 3 %>
                    <div class="rounded-full w-20 h-20 border-2 border-white shadow-lg flex items-center justify-center bg-white/20">
                      <span class="text-white font-bold text-sm">+<%= teachers.count - 3 %></span>
                    </div>
                  <% end %>
                </div>
                <p class="text-white font-semibold text-center px-2">
                  <%= teachers.first(2).map(&:name).join(' ') %>
                  <% if teachers.count > 2 %>
                    <span class="text-white/80"> +<%= teachers.count - 2 %> more</span>
                  <% end %>
                </p>
              <% else %>
                <div class="rounded-full overflow-hidden w-32 h-32 border border-white shadow-lg flex items-center justify-center">
                  <div class="aspect-square w-[128px] overflow-hidden">
                    <svg class="text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                      <circle cx="12" cy="8" r="4"/>
                      <path d="M2 19c0-2.5 4-5 10-5s10 2.5 10 5v5H2v-5z"/>
                    </svg>
                  </div>
                </div>
                <p class="text-white/80 text-sm mt-2">No teachers assigned</p>
              <% end %>
            </div>
            <!-- Summary Section -->
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"><%= assignment.composition.name %></h3>
              <div class="space-y-1 text-sm text-gray-600 dark:text-gray-400">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                  </svg>
                  <span><%= assignment.student.name %></span>
                </div>
                <% if assignment.lessons.any? %>
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                    </svg>
                    <span>
                      <%= assignment.lessons.minimum(:date)&.strftime('%b %d, %Y') || 'No date' %>
                      <% if assignment.lessons.minimum(:date) != assignment.lessons.maximum(:date) %>
                        - <%= assignment.lessons.maximum(:date)&.strftime('%b %d, %Y') %>
                      <% end %>
                    </span>
                  </div>
                <% end %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                  </svg>
                  <span><%= pluralize(assignment.lessons.count, 'lesson') %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
