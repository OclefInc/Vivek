<%= turbo_frame_tag "assignment_#{@assignment.id}_project_name" do %>
  <%= form_with(model: @assignment, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :project_name, class: "dark:text-gray-200", style: "display: block" %>
      <%= form.text_field :project_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full dark:bg-gray-800 dark:text-gray-200", {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": @assignment.errors[:project_name].none?, "border-red-400 dark:border-red-600 focus:outline-red-600": @assignment.errors[:project_name].any?}] %>
    </div>
    <div class="mt-2 flex gap-2">
      <%= form.submit "Save", class: "px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white rounded-lg text-sm font-medium cursor-pointer" %>
      <%= link_to "Cancel", assignment_path(@assignment), class: "px-2 py-1 bg-gray-100 dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 rounded-lg text-sm font-medium dark:text-gray-200" %>
    </div>
  <% end %>
<% end %>