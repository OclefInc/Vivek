<% content_for :title, "Comments" %>
<div class="flex justify-between items-center">
  <h1 class="text-3xl text-left text-red-600 dark:text-red-400 px-3 py-2">Comments</h1>
  <%= form_with url: comments_path, method: :get, data: { turbo_frame: "comments-table", turbo_action: "advance", class: "flex-1 min-w-0" } do |form| %>
    <%= form.text_field :query,
            value: params[:query],
            id: "table-search",
            class: "p-2 ps-10 text-sm text-gray-700 flex-initial border border-gray-300 rounded-xl w-80 min-w-0 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
            placeholder: "Search for comments",
            oninput: "this.form.requestSubmit()" %>
  <% end %>
  <span></span>
</div>
<div class="mx-auto py-4">
  <table class="w-full table-auto border-collapse">
    <tr>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Date</th>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">User</th>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Model</th>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Is Published</th>
    </tr>
    <% @comments.each do |comment| %>
      <tr>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= link_to local_date(comment.created_at), comment, class:"text-blue-500 hover:text-red-500 dark:text-blue-400 dark:hover:text-red-400" %></td>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= comment.user.email %></td>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= comment.annotation_type %></td>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= comment.is_published? %></td>
      </tr>
    <% end %>
  </table>
</div>