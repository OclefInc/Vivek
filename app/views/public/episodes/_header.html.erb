<div class="">
  <!-- Composition Name - Full width on mobile -->
  <div class="mb-4 text-center">
    <p class="text-slate-900 dark:text-teal-200 text-xl sm:text-2xl font-medium  break-words">
      <%= link_to(@episode.project.composition.name, project_path(@episode.project), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words') %>
    </p>
  </div>
  <!-- Student and Teachers Info - Stack on mobile, side by side on larger screens -->
  <div class="flex sm:justify-between sm:items-center gap-3 sm:gap-4">
    <p class="text-slate-700 dark:text-slate-300 text-sm sm:text-base lg:text-lg">
      <strong class="font-semibold">Student:</strong>
      <%= link_to @episode.project.student.name, student_path(@episode.project.student), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words' %>
    </p>
    <p class="text-slate-700 dark:text-slate-300 text-sm sm:text-base">
      <strong class="font-semibold">Teacher:</strong>
      <%= link_to @episode.teacher.name, professor_path(@episode.teacher), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words' %>
    </p>
  </div>
</div>