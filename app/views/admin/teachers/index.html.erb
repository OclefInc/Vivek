<%= render layout: "shared/index_layout",
           locals: {
             title: "Teachers",
             search_url: teachers_path,
             turbo_frame: "teachers-table",
             search_placeholder: "Search for teachers",
             new_button_text: "Add new teacher",
             new_path: nil
           } do %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    <% @teachers.each do |teacher| %>
      <%= link_to teacher, class: "block" do %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden border border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="flex flex-col items-center">
              <div class="rounded-full overflow-hidden w-24 h-24 mb-4 border border-gray-200 dark:border-gray-600 flex items-center justify-center">
                <% if teacher.display_avatar(size: 300) %>
                  <%= image_tag teacher.display_avatar(size: 300), class:"object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                    <span class="text-white text-3xl font-bold"><%= teacher.initials || teacher.email&.first&.upcase %></span>
                  </div>
                <% end %>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 text-center mb-3">
                <%= teacher.name %>
              </h3>
              <div class="flex gap-6 text-sm text-gray-600 dark:text-gray-400">
                <div class="flex flex-col items-center">
                  <span class="font-semibold text-xl text-blue-600 dark:text-blue-400"><%= teacher.projects.length %></span>
                  <span class="text-xs">Projects</span>
                </div>
                <div class="flex flex-col items-center">
                  <span class="font-semibold text-xl text-green-600 dark:text-green-400"><%= teacher.tutorials.length %></span>
                  <span class="text-xs">Tutorials</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
