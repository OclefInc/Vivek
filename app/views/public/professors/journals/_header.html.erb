<% if user_signed_in? %>
  <turbo-frame id="subscription_frame">
    <div class="flex justify-center my-4">
      <div class="bg-yellow-100 dark:bg-yellow-900/30 border-l-4 border-yellow-500 text-yellow-700 dark:text-yellow-400 px-4 py-2 rounded shadow-sm flex items-center gap-4" role="alert">
        <div>
          <span class="font-semibold">Journal:</span> Updates are posted regularly.
        </div>
        <% if journal.subscriptions.exists?(user: current_user) %>
          <%= button_to "Unsubscribe", professor_journal_subscription_path(@teacher, journal), method: :delete, class: "text-xs px-3 py-1 bg-yellow-200 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-200 rounded-full hover:bg-yellow-300 dark:hover:bg-yellow-700 transition font-medium" %>
        <% else %>
          <%= button_to "Subscribe To Updates", professor_journal_subscription_path(@teacher, journal), method: :post, class: "text-xs px-3 py-1 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium shadow-sm" %>
        <% end %>
      </div>
    </div>
  </turbo-frame>
<% end %>
<div class="hidden xl:block">
  <div class="mb-4 text-center">
    <p class="text-slate-900 dark:text-teal-200 text-xl sm:text-2xl font-medium  break-words flex items-center justify-center gap-2">
      <%= link_to(journal.name, professor_journal_path(@teacher, journal), class:' dark:text-teal-200  hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words') %>
    </p>
  </div>
  <!-- Student and Teachers Info - Stack on mobile, side by side on larger screens -->
  <div class="flex items-center justify-center gap-2 text-slate-700 dark:text-slate-300 text-sm sm:text-base lg:text-lg">
    <div class="flex items-center gap-2">
      <% if journal.user.cropped_avatar(size: 32) %>
        <%= image_tag journal.user.cropped_avatar(size: 32), class: "w-8 h-8 rounded-full object-cover border border-gray-200 dark:border-gray-700" %>
      <% end %>
      <%= link_to journal.user.name, professor_path(@teacher), class:'hidden xl:block text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
    </div>
  </div>
</div>
<div class="w-full sm:max-w-[640px] sm:min-w-[640px]  px-4 xl:hidden">
  <div class="flex justify-between">
    <p class="text-slate-900 dark:text-teal-200 text-xl sm:text-2xl font-medium  break-words flex items-center justify-center gap-2">
      <%= link_to(journal.name, professor_journal_path(@teacher, journal), class:' dark:text-teal-200  hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 break-words') %>
    </p>
    <!-- Student and Teachers Info - Stack on mobile, side by side on larger screens -->
    <div class="">
      <% if journal.user.cropped_avatar(size: 32) %>
        <%= image_tag journal.user.cropped_avatar(size: 32), class: "w-8 h-8 rounded-full object-cover border border-gray-200 dark:border-gray-700" %>
      <% end %>
    </div>
  </div>
  <div class="mt-5">
    <%= render '/public/professors/journals/journal_entry_dropdown', journal_entry: journal_entry, journal: journal %>
  </div>
</div>
