<div id="<%= dom_id tutorial %>">
  <div class="text-white p-4">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-semibold">About This Presentation:</h3>
      <% if tutorial.skill_category %>
        <p class="text-slate-700 dark:text-slate-300 text-sm sm:text-base">
          <strong class="dark:text-gray-200">Skill Category:</strong>
          <%= tutorial.skill_category&.name || "None" %>
        </p>
      <% end %>
    </div>
    <%= tutorial.description %>
    <%= render 'shared/share_buttons' %>
  </div>
</div>
