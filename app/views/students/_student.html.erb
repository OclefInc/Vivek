<div id="<%= dom_id student %>" class="flex w-auto my-2 space-y-2 items-start">
  <div class="py-2 px-4">
    <%= image_tag student.profile_picture, class:"max-w-32" if student.profile_picture.attached? %>
  </div>
  <div class="w-auto pb-2 px-4">
    <div class="font-bold w-35 pb-2 text-sky-800 dark:text-teal-300">
      <%= student.name %>
    </div>
    <p class="text-sky-700 dark:text-teal-400">
      Born:
      <%= student.year_of_birth %>
    </p>
  </div>
  <div class="flex-auto w-full text-sky-800 dark:text-teal-400">
    <strong>Bio:</strong>
    <%= student.bio %>
  </div>
</div>
