<p style="color: green"><%= notice %></p>

<% content_for :title, "Assignments" %>

<h1 class="text-2xl text-left text-red-600 px-3 py-2">Assignments</h1>
<table class="w-full text-left text-gray-800 px-3 py-2">
  <tr>
    <th class="px-3 py-2">Student</th>
    <th class="px-3 py-2">Teacher</th>
    <th class="px-3 py-2">Composition</th>
  </tr> 
  <% @assignments.each do |assignment| %>
  <tr>
    <td><%= link_to assignment.student.name, assignment, class:"text-blue-500 hover:text-red-500 px-1 py-1" %></td>
    <td class="px-1 py-1"><%= assignment.teacher.name %></td>
    <td class="px-1 py-1"><%= assignment.composition.name %></td>
  </tr>
   <% end %>
</table>


<%= link_to "New assignment", new_assignment_path, class: "block w-fit mt-4 rounded-md px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
