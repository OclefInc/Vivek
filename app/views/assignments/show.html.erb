<p style="color: green"><%= notice %></p>
<div class="flex justify-between ">
  <h1 class="font-bold text-3xl">Assignment: <%= @assignment.composition.name %></h1>
  <div class="ml-2 flex items-start justify-end gap-1">
    <%= link_to "Edit", edit_assignment_path(@assignment), class: "sm:w-auto text-center rounded-lg px-3 py-2 m-1 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Delete", @assignment, method: :delete, class: "sm:w-auto rounded-lg px-3 py-2 m-1 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Delete entire assignment; Are you sure?" } if @assignment.lessons.empty? %>
    <%= link_to "Add New Lesson", new_lesson_path({assignment_id:@assignment.id}), class: "sm:w-auto text-center text-white rounded-lg px-3 py-2 m-1 bg-blue-600 hover:bg-blue-500 inline-block font-medium" %>
  </div>
</div>
<div class="flex w-screen -mx-5 py-4">
  <div class="flex-1 basis-1/2">
    <%= render @assignment %>
  </div>
  <div class="flex-1 basis-1/2 px-5">
    <%= render partial: 'lesson_table', locals: { lessons: @assignment.lessons } %>
  </div>
</div>
<%= render partial:"/comments/module", locals:{annotation:@assignment} %>
