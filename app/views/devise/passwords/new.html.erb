<div class="flex flex-row justify-center">
<div class="border shadow-lg bg-gray-200 rounded-md px-5 py-5 ">

<h2 class="font-bold">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["block shadow-sm fill-white rounded-lg border-2 border-blue-600 px-3 py-2 mt-2 w-full",] %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "sm:w-auto w-full mt-2 rounded-lg px-3 py-2 bg-red-800 hover:bg-red-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
