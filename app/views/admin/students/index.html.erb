<%= render layout: "shared/index_layout",
           locals: {
             title: "Students",
             search_url: students_path,
             turbo_frame: "students-table",
             search_placeholder: "Search for students",
             new_button_text: "Add new student",
             new_path: nil
           } do %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    <% @students.each do |student| %>
      <%= link_to student, class: "block" do %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden border border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="flex flex-col items-center">
              <div class="rounded-full overflow-hidden w-24 h-24 mb-4 border border-gray-200 dark:border-gray-600 flex items-center justify-center">
                <% if student.display_avatar(size: 96) %>
                  <%= image_tag student.display_avatar(size: 96), class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                    <span class="text-white text-3xl font-bold"><%= student.initials || student.email&.first&.upcase %></span>
                  </div>
                <% end %>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 text-center mb-2">
                <%= student.name %>
              </h3>
              <div class="mb-3">
                <% if student.show_on_contributors %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-600 text-white dark:bg-green-600">
                    Public
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-600 text-white dark:bg-gray-600">
                    Private
                  </span>
                <% end %>
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <div class="flex flex-col items-center">
                  <span class="font-semibold text-xl text-blue-600 dark:text-blue-400"><%= student.assignments.length %></span>
                  <span class="text-xs">Projects</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
