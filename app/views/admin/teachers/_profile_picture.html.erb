  <%= turbo_frame_tag "teacher_#{teacher.id}_profile_picture" do %>
  <div class="flex flex-col items-center justify-center">
    <div class="rounded-full overflow-hidden mx-auto border border-gray-300 dark:border-gray-600">
      <% if teacher.display_avatar(size: 300) %>
        <%= image_tag teacher.display_avatar(size: 300), class:"object-cover" %>
      <% else %>
        <div class="aspect-square w-[300px]  overflow-hidden ">
          <svg class="text-gray-400" fill="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="8" r="4"/>
            <path d="M2 19c0-2.5 4-5 10-5s10 2.5 10 5v5H2v-5z"/>
          </svg>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center mt-2 space-x-2">
    <%= link_to edit_teacher_path(teacher, field: :profile_picture), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm" do %>
      <span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
        </svg> Upload</span>
    <% end %>
    <% if teacher.profile_picture.attached? %>
      <%= link_to edit_teacher_path(teacher, field: :crop_profile_picture), class: "text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 text-sm" do %>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 3.75H6A2.25 2.25 0 0 0 3.75 6v1.5M16.5 3.75H18A2.25 2.25 0 0 1 20.25 6v1.5m0 9V18A2.25 2.25 0 0 1 18 20.25h-1.5m-9 0H6A2.25 2.25 0 0 1 3.75 18v-1.5M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg> Crop</span>
      <% end %>
    <% end %>
  </div>
<% end %>