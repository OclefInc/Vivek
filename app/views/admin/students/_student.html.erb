<div id="<%= dom_id student %>">
  <div class="pt-2 dark:text-gray-300">
    <div id="student_visibility_badge" class="mb-3">
      <strong class="dark:text-gray-200">Profile Status: </strong>
      <%= button_to toggle_visibility_student_path(student), method: :patch, class: "inline-block", form: { data: { turbo_frame: "_top" } } do %>
        <% if student.show_on_contributors %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-600 text-white dark:bg-green-600 hover:bg-green-700 dark:hover:bg-green-700 cursor-pointer transition-colors">
            Public
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-600 text-white dark:bg-gray-600 hover:bg-gray-700 dark:hover:bg-gray-700 cursor-pointer transition-colors">
            Private
          </span>
        <% end %>
      <% end %>
    </div>
    <div class="flex justify-between">
      <div>
        <%= turbo_frame_tag "student_#{student.id}_name" do %>
          <strong class="dark:text-gray-200">Name: </strong><%= link_to edit_student_path(student, field: :name), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          <% end %>
          <%= student.name %>
        <% end %>
      </div>
      <div class="">
        <%= turbo_frame_tag "student_#{student.id}_bio" do %>
          <strong class="dark:text-gray-200">Age Started Piano:</strong> <%= link_to edit_student_path(student, field: :age_started_piano), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          <% end %>
          <%= student.age_started_piano %>
        <% end %>
      </div>
    </div>
  </div>
