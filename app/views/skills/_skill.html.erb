<div id="<%= dom_id skill %>" class="my-5">
  <div class="flex flex-wrap items-center justify-between gap-3 mb-4">
    <div class="flex-shrink min-w-0">
      <span class="font-bold text-xl text-sky-800 dark:text-teal-200"><%= skill.name %></span>
    </div>
    <div class="flex flex-wrap gap-3">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-sky-100 dark:bg-zinc-800 border-2 border-sky-200 dark:border-zinc-700 rounded-lg">
        <span class="text-xs font-semibold text-sky-700 dark:text-sky-300 uppercase tracking-wide">Category:</span>
        <span class="text-sm font-medium text-sky-800 dark:text-teal-300"><%= skill.skill_category.name %></span>
      </div>
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-sky-100 dark:bg-zinc-800 border-2 border-sky-200 dark:border-zinc-700 rounded-lg">
        <span class="text-xs font-semibold text-sky-700 dark:text-sky-300 uppercase tracking-wide">Lessons:</span>
        <span class="text-sm font-medium text-sky-800 dark:text-teal-300"><%= skill.lessons.count %></span>
      </div>
    </div>
  </div>
</div>
