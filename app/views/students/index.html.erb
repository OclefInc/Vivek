<% content_for :title, "Students" %>
<div class="max-w-7xl mx-auto space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <div class="bg-sky-50 dark:bg-zinc-900 px-6 pt-6 pb-3">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl text-sky-800 dark:text-teal-200 font-bold border-l-4 border-teal-400 pl-3">Students</h1>
        <%= form_with url: students_path, method: :get, data: { turbo_frame: "students-table", turbo_action: "advance" } do |form| %>
          <%= form.text_field :query,
                value: params[:query],
                id: "table-search",
                class: "block p-2 ps-10 text-sm text-gray-700 border border-gray-300 rounded-xl w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                placeholder: "Search for students",
                oninput: "this.form.requestSubmit()" %>
        <% end %>
      </div>
    </div>
    <div class="bg-sky-50 dark:bg-zinc-900 p-6 md:p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @students.each do |student| %>
          <%= link_to student_path(student), class: "block bg-white dark:bg-zinc-800 rounded-xl shadow hover:shadow-lg transition-shadow p-4 border-2 border-transparent hover:border-green-400/60 dark:hover:border-green-400/60" do %>
            <div class="flex items-center gap-3">
              <% if student.profile_picture.attached? %>
                <%= image_tag student.profile_picture, class: "w-16 h-16 rounded-full object-cover" %>
              <% else %>
                <div class="w-16 h-16 rounded-full bg-sky-100 dark:bg-zinc-700 flex items-center justify-center">
                  <span class="text-2xl font-bold text-sky-700 dark:text-sky-300"><%= student.name[0] %></span>
                </div>
              <% end %>
              <div class="flex-1">
                <h3 class="font-bold text-sky-800 dark:text-teal-200"><%= student.name %></h3>
                <p class="text-sm text-slate-600 dark:text-slate-400"><%= pluralize(student.assignments.length, 'project') %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
