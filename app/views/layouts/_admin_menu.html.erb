<div class="p-5 border-b border-sky-200 dark:border-gray-700">
  <div class="flex justify-between items-center">
    <%= link_to root_path, class: "text-cyan-600 dark:text-cyan-400 hover:text-cyan-500 dark:hover:text-cyan-300", title: "Home" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
      </svg>
    <% end %>
    <% if current_user.teacher.present? %>
      <%= link_to teacher_path(current_user.teacher) do %>
        <div class="rounded-full border overflow-hidden w-6 h-6 ">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.cropped_avatar(size: 48), class: "w-6 h-6 rounded-full object-cover" %>
          <% elsif current_user.picture_url.present? %>
            <%= image_tag current_user.picture_url, class: "w-6 h-6 rounded-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
              <span class="text-white text-xs"><%= current_user.initials&.upcase || current_user.email&.first&.upcase %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="text-2xl font-medium text-black dark:text-gray-100 text-center mt-4"><%= link_to("Admin", admin_path) %></div>
<nav class="flex-1 overflow-y-auto py-4">
  <%= link_to "Projects", assignments_path, class: nav_link_class(["/admin/assignments", "/admin/lessons", "/admin", "/admin/"]) %>
  <%= link_to "Teachers", teachers_path, class: nav_link_class(["/admin/teachers", "/admin/tutorials"]) %>
  <%= link_to "Students", students_path, class: nav_link_class(["/admin/students"]) %>
  <%= link_to "Skills", skill_categories_path, class: nav_link_class(["/admin/skill_categories"]) %>
  <%= link_to "Music", compositions_path, class: nav_link_class(["/admin/compositions"]) %>
  <%= link_to "Project Types", project_types_path, class: nav_link_class(["/admin/project_types"]) %>
  <%= link_to "Comments", admin_comments_path, class: nav_link_class(["/admin/comments"]) %>
  <%= link_to "Accounts", accounts_path, class: nav_link_class(["/admin/accounts"]) %>
  <% if Rails.env.development? %>
    <a href="/coverage/index.html" target="_blank" class="<%= nav_link_class([]) %>">Coverage</a>
  <% end %>
</nav>