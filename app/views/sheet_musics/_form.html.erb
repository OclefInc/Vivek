<%= form_with(model: sheet_music, class: "contents") do |form| %>
  <% if sheet_music.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(sheet_music.errors.count, "error") %> prohibited this sheet_music from being saved:</h2>
      <ul class="list-disc ml-6">
        <% sheet_music.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :composition_id %>
  <div class="my-5">
    <%= form.label :pdf_file %>
    <%= form.file_field :pdf_file, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": sheet_music.errors[:pdf_file].none?, "border-red-400 focus:outline-red-600": sheet_music.errors[:pdf_file].any?}] %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
