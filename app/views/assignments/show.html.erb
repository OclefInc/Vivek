<p style="color: green"><%= notice %></p>
<%= render @assignment %>
<h1 class="text-2xl text-red-500">Lessons</h1>
<table class="w-full text-left text-gray-500 border">
  <tr>
    <th class="px-10 py-5">Name</th>
    <th class="px-10 py-5">Status</th>
  </tr>
  <% @assignment.lessons.each do |lesson| %>
    <tr class="border">
      <td class="px-10 py-5"><%= link_to lesson.name, lesson   %></td>
      <td class="px-10 py-5"><%= lesson.status %></td>
    </tr>
  <% end %>
</table>
<div class="flex">
  <%= link_to "Add New Lesson", new_lesson_path({assignment_id:@assignment.id}), class:"mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium border me-2" %>
  <%= link_to "Edit this assignment", edit_assignment_path(@assignment), class:"mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium border me-2" %>
  <%= link_to "Back to assignments", assignments_path, class:"mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium border me-2" %>
  <%= button_to "Destroy this assignment", @assignment, method: :delete, class:"mt-2 rounded-lg py-3 px-5 bg-red-200 inline-block font-medium border" %>
</div>
