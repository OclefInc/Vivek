<div class= "flex flex-row justify-between">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "sm:w-auto py-2 text-indigo-600 dark:text-indigo-300 hover:text-indigo-400 dark:hover:text-indigo-200 inline-block font-medium cursor-pointer" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "sm:w-auto py-2 text-indigo-600 dark:text-indigo-300 hover:text-indigo-400 dark:hover:text-indigo-200 inline-block font-medium cursor-pointer" %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "sm:w-auto py-2 text-indigo-600 dark:text-indigo-300 hover:text-indigo-400 dark:hover:text-indigo-200 inline-block font-medium cursor-pointer" %>
  <% end %>
</div>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't get confirmation instructions?", new_confirmation_path(resource_name), class: "w-full text-xs  text-indigo-600 dark:text-indigo-300 hover:text-indigo-400 dark:hover:text-indigo-200 inline-block font-light cursor-pointer" %><br />
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't get unlock instructions?", new_unlock_path(resource_name), class: "w-full text-xs  text-indigo-600 dark:text-indigo-300 hover:text-indigo-400 dark:hover:text-indigo-200 inline-block font-light cursor-pointer" %><br />
<% end %>
