<%= form_with(model: assignment) do |form| %>
  <% if assignment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
        <% assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :student, style: "display: block" %>
    <%= form.collection_select :student_id, Student.order(:name), :id, :name, {},
      { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div>
    <%= form.label :teacher, style: "display: block" %>
    <%= form.collection_select :teacher_id, Teacher.order(:name), :id, :name, {},
      { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div>
    <%= form.label :composition, style: "display: block" %>
    <%= form.collection_select :composition_id, Composition.order(:name), :id, :name, {},
      { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>
  <div class="my-5">
    <%= form.label :summary_video %>
    <%= form.file_field :summary_video, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": assignment.errors[:summary_video].none?, "border-red-400 focus:outline-red-600": assignment.errors[:summary_video].any?}] %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description,
      class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div>
  <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div> 
<% end %>
