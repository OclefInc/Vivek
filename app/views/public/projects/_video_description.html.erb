<div  id="<%= dom_id @project %>" class="" style="max-width: 640px; ">
  <div style="aspect-ratio: 4/3;">
    <% if @project.summary_video.attached? %>
      <div class=" w-full relative bg-black" style="max-width: 640px; aspect-ratio: 4/3;" data-controller="video-poster">
        <%= video_tag @project.summary_video, id: "lesson-video", style: "width: 100%; height: 100%; object-fit: contain;", controls: true, preload: "metadata", data: { video_poster_target: "video" } %>
        <div data-video-poster-target="overlay" class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none bg-black">
          <h2 class="text-white text-3xl font-bold text-center px-8"><%= @project.composition.name %></h2>
          <p class="text-gray-300 text-xl mt-3"><%= @project.student.name %></p>
          <% if @project.lessons.any? %>
            <p class="text-gray-400 text-lg mt-2">
              <%= @project.lessons.minimum(:date)&.strftime("%b %d, %Y") %> - <%= @project.lessons.maximum(:date)&.strftime("%b %d, %Y") %>
            </p>
            <p class="text-gray-400 text-lg mt-1">
              <%= @project.lessons.count %> <%= 'Lesson'.pluralize(@project.lessons.count) %>
            </p>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-200 dark:bg-zinc-700 p-2 rounded-2xl flex items-center justify-center w-full">
        <span class="text-gray-500 dark:text-gray-400 text-lg">No summary video available</span>
      </div>
    <% end %>
  </div>
  <div class="bg-gray-800 text-white p-4">
    <div class="flex justify-between items-center mb-2">
      <h3 class="text-lg font-semibold">About This Project:</h3>
    </div>
    <%= @project.description %>
  </div>
</div>