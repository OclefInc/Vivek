<% content_for :title, "#{@teacher.name} - Presentations" %>
<div class="flex flex-col items-center max-w-7xl mx-auto px-4 py-8">
  <div class="w-full mb-8">
    <div class="flex items-center gap-4 mb-6">
      <%= link_to professor_path(@teacher), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
        <%= @teacher.name %>'s Learning Journals
      </h1>
    </div>
  </div>
  <% if @journals.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full">
      <% @journals.each do |journal| %>
        <%= render partial: 'journal_card', locals: { journal: journal } %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-600 dark:text-gray-400 text-lg">No journals available yet.</p>
    </div>
  <% end %>
</div>
