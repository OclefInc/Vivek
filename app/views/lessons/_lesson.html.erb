<div id="<%= dom_id lesson %>" class="md:flex-1 md:basis-1/2 md:px-5 max-w-[640px]"
     data-controller="video-time"
     data-video-time-url-value="<%= lesson_path(lesson) %>">
  <%= turbo_frame_tag "lesson_#{lesson.id}_lesson_video" do %>
    <div class="bg-black flex items-center justify-center" style="width: 640px; height: 480px; max-width: 100%;">
      <%
        video_url = lesson.lesson_video
        if lesson.video_start_time.present? || lesson.video_end_time.present?
          fragment = "#t="
          fragment += lesson.video_start_time.to_s if lesson.video_start_time.present?
          fragment += "," + lesson.video_end_time.to_s if lesson.video_end_time.present?
          video_url = url_for(lesson.lesson_video) + fragment
        end
      %>
      <%= video_tag video_url,
          controls: true,
          style: "max-width: 100%; max-height: 100%;",
          class: "max-w-full h-auto",
          data: {
            controller: "plyr video-time",
            plyr_next_url_value: lesson.next_lesson ? lesson_path(lesson.next_lesson) : nil,
            video_time_target: "video"
          } %>
    </div>
  <% end %>
  <%= form_with(model: @lesson) do |form| %>
    <div class="bg-gray-800 text-white p-4">
      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <div class="flex items-center gap-2">
            <%= form.label :video_start_time, "Start Time:", class: "block text-sm" %>
            <span data-video-time-target="startDisplay" class="text-sm">
              <%= lesson.video_start_time ? "#{lesson.video_start_time}s" : "Not set" %>
            </span>
            <button type="button"
                    data-action="click->video-time#setStartTime"
              class="px-2 py-1 bg-blue-600 hover:bg-blue-500 rounded-lg text-sm font-medium">
              Set Start
            </button>
          </div>
          <%= form.hidden_field :video_start_time, data: { video_time_target: "startTime" } %>
        </div>
        <div>
          <div class="flex items-center gap-2">
            <%= form.label :video_end_time, "End Time:", class: "block text-sm" %>
            <span data-video-time-target="endDisplay" class="text-sm">
              <%= lesson.video_end_time ? "#{lesson.video_end_time}s" : "Not set" %>
            </span>
            <button type="button"
                    data-action="click->video-time#setEndTime"
              class="px-2 py-1 bg-blue-600 hover:bg-blue-500 rounded-lg text-sm font-medium">
              Set End
            </button>
          </div>
          <%= form.hidden_field :video_end_time, data: { video_time_target: "endTime" } %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="my-1">
    <div class="flex justify-between flex-col sm:flex-row gap-6">
      <div class="">
        <%= turbo_frame_tag "lesson_#{lesson.id}_date" do %>
          <strong class="dark:text-gray-200">Lesson Date:</strong>
          <span class="dark:text-gray-200"><%= lesson.date.strftime("%B %d, %Y") %></span>
        <% end %>
      </div>
      <div class="">
        <%= turbo_frame_tag "lesson_#{lesson.id}_teacher" do %>
          <strong class="dark:text-gray-200">Teacher:</strong> <%= link_to edit_lesson_path(lesson, field: :teacher), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          <% end %>
          <% if lesson.teacher.present? %>
            <%= link_to lesson.teacher.name, lesson.teacher, class:'text-blue-600 hover:text-blue-400 dark:text-blue-400 dark:hover:text-blue-300', data: { turbo_frame: "_top" } %>
          <% else%>
            <span class="text-gray-400 dark:text-gray-500 italic">Click to add teacher</span>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="py-6">
      <%= turbo_frame_tag "lesson_#{lesson.id}_description" do %>
        <strong class="dark:text-gray-200">Description:</strong> <%= link_to edit_lesson_path(lesson, field: :description), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
        <div class="dark:text-gray-200">
          <%= lesson.description.present? ? lesson.description : content_tag(:span, "Click to add description", class: "text-gray-400 dark:text-gray-500 italic") %>
        </div>
      <% end %>
    </div>
    <%= turbo_frame_tag "lesson_#{lesson.id}_skills" do %>
      <strong class="dark:text-gray-200">Skills:</strong> <%= link_to edit_lesson_path(lesson, field: :skills), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      <% end %>
      <% if lesson.skills.any? %>
        <%= lesson.skills.map { |skill| link_to(skill.name, skill, class:"text-blue-700 hover:text-blue-400 dark:text-blue-400 dark:hover:text-blue-300", data: { turbo_frame: "_top" }) }.join(', ').html_safe %>
      <% else %>
        <span class="text-gray-400 dark:text-gray-500 italic">Click to add skills</span>
      <% end %>
    <% end %>
  </div>
</div>