<div id="<%= dom_id skill %>" class="flex w-full justify-between my-5 space-y-5">
  <div class="w-32 sm:flex-auto flex-initial mx-4 my-2">
    <span class="font-semibold text-2xl">  <%= skill.name %> </span>
  </div>
  <div class="flex-auto mx-2 my-2">
    <p>Skill category:</p>
    <span class="font-semibold"> <%= skill.skill_category.name %> </span>
  </div>
  <div class="flex-auto mx-2 my-2">
    <strong class="block font-medium mb-1">Number of Lessons:</strong>
    <%= skill.lessons.count %>
  </div>
</div>
