<turbo-frame id="comment_<%= @comment.id %>">
  <div class="max-w-2xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6 text-sky-800 dark:text-teal-400">Edit Comment</h1>
    <% if @comment.errors.any? %>
      <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
        <%= @comment.errors.full_messages.to_sentence %>
      </div>
    <% end %>
    <%= form_with(model: @comment, url: comment_path(@comment), method: :patch) do |form| %>
      <div class="mb-4">
        <%= form.rich_text_area :note,
          class: "block shadow border rounded-3xl border-sky-100 dark:border-sky-900 p-4 w-full text-sky-800 dark:text-teal-400 min-h-[100px]",
          placeholder: "Add a comment" %>
      </div>
      <div class="flex justify-end gap-2">
        <%= link_to "Cancel", comments_path(annotation_type: @comment.annotation_type, annotation_id: @comment.annotation_id), class: "rounded-xl px-4 py-2 border border-gray-300 text-gray-600 hover:bg-gray-50 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-zinc-800" %>
        <%= form.submit "Update Comment", class: "rounded-xl px-4 py-2 border-2 border-white dark:border-indigo-300 bg-indigo-500 dark:border-zinc-900 hover:bg-indigo-400 hover:border-indigo-100 text-white font-medium cursor-pointer disabled:opacity-75 disabled:cursor-wait", data: { turbo_submits_with: "Validating..." } %>
      </div>
    <% end %>
  </div>
</turbo-frame>