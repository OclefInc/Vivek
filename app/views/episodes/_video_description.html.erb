<div id="<%= dom_id @episode %>">
  <div class="md:-mx-5 px-6 xl:px-5 xl:pb-5 xl:mt-5">
    <div class="md:flex md:-mx-5">
      <div class="md:flex-1 md:basis-1/2 md:px-5 text-slate-700 dark:text-slate-300">
        <% if @episode.lesson_video.attached? %>
          <div class="bg-black p-2 rounded-2xl flex items-center justify-center w-full" style="max-width: 640px; aspect-ratio: 4/3;">
            <%= video_tag @episode.lesson_video, style: "width: 100%; height: 100%; object-fit: contain;", controls: true, class: "rounded-lg" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-bold text-slate-700 dark:text-slate-300 px-4 py-2 w-full" style="max-width: 640px;">
      <p class="text-slate-700 dark:text-slate-300 mb-2">
        <% if @episode.teacher.present? %>
          <%= link_to @episode.teacher.name, professor_path(@episode.teacher), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %> (Teacher)
        <% end %>
      </p>
      <div class="my-2 text-slate-700 dark:text-slate-300">
        <p class="font-bold"> Skills: </p>
        <%= @episode.skills.map{|skill| link_to(skill.name, skill_path(skill), class:"text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 pl-4")}.join(', ').html_safe %>
      </div>
      <p class="my-2text-slate-700 dark:text-slate-300">
        <%= @episode.description %>
      </p>
    </div>
  </div>
</div>