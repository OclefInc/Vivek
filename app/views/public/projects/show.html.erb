<% content_for :title, "Project: #{@project.name}" %>
<%= render 'header' %>
<% if user_signed_in? && !@project.complete? %>
  <div class="flex justify-center my-4">
    <div class="bg-yellow-100 dark:bg-yellow-900/30 border-l-4 border-yellow-500 text-yellow-700 dark:text-yellow-400 px-4 py-2 rounded shadow-sm flex items-center gap-4" role="alert">
      <div>
        <span class="font-semibold">Ongoing Project:</span>  Lessons are still being added.
      </div>
      <% if @project.subscriptions.exists?(user: current_user) %>
        <%= button_to "Unsubscribe", project_subscription_path(@project), method: :delete, class: "text-xs px-3 py-1 bg-yellow-200 dark:bg-yellow-800 text-yellow-800 dark:text-yellow-200 rounded-full hover:bg-yellow-300 dark:hover:bg-yellow-700 transition font-medium" %>
      <% else %>
        <%= button_to "Subscribe To Updates", project_subscription_path(@project), method: :post, class: "text-xs px-3 py-1 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition font-medium shadow-sm" %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="xl:flex xl:gap-8 py-4">
  <div class="xl:min-w-[640px] xl:max-w-[640px] md:flex-1 md:basis-1/2 mb-4 xl:mb-0">
    <div class="rounded-lg overflow-hidden shadow-sm">
      <%= render 'video_description' %>
    </div>
    <div class="xl:hidden mt-5">
      <div class="flex items-center gap-2">
        <select id="episode_select" class="w-full border rounded px-2 py-1 bg-white dark:bg-zinc-800 text-gray-900 dark:text-gray-100 border-gray-300 dark:border-zinc-600" onchange="if (this.value) window.location.href = this.value">
          <option value="">View Lesson</option>
          <% @project.lessons.each do |lesson| %>
            <option value="<%= project_episode_path(@project, lesson) %>">
              <%= lesson.name %>
            </option>
          <% end %>
        </select>
      </div>
    </div>
    <!-- Comments Section -->
    <div class="w-full mt-8">
      <turbo-frame id="comments_module" src="<%= comments_path(annotation_type: @project.class.name, annotation_id: @project.id) %>"></turbo-frame>
    </div>
  </div>
  <div class="hidden xl:block w-full xl:flex-1 xl:basis-1/2 xl:self-start overflow-y-auto rounded-lg overflow-hidden shadow-sm">
    <%= render 'episode_table' %>
  </div>
</div>
