<% content_for :title, "Tutorial" %>
<%= render 'header', tutorial: @tutorial %>
<div class="flex flex-col items-center max-w-7xl mx-auto ">
  <div class="xl:flex xl:gap-8">
    <div class="md:-mx-5 py-4 xl:min-w-[640px]  xl:max-w-[640px] md:flex-1 md:basis-1/2 md:px-5">
      <div class="bg-gray-800 rounded overflow-hidden">
        <turbo-frame id="tutorial_<%= @tutorial.id %>_video_file">
          <%= render 'video_file', tutorial: @tutorial %>
        </turbo-frame>
        <%= render @tutorial %>
      </div>
    </div>
    <div class="w-full py-4 xl:flex-1 xl:basis-1/2 xl:px-5  md:-mx-5 ">
      <%= render 'chapters_table', chapters_tutorials: @tutorial.chapters_tutorials %>
    </div>
  </div>
</div>