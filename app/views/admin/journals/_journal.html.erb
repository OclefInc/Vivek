<div id="<%= dom_id journal %>" class="">
  <div class="my-1">
    <p class="mb-2 dark:text-gray-300">
      <%= turbo_frame_tag "journal_#{journal.id}_composition" do %>
        <b>Composition: </b><%= link_to edit_journal_path(journal, field: :composition), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
        <%= journal.name %>
      <% end %>
    </p>
    <div class="flex justify-between items-center mt-4">
      <p class="mb-2 dark:text-gray-300">
        <b>Entries:</b>
        <%= journal.journal_entries.count %>
      </p>
      <% if journal.journal_entries.any? %>
        <%= turbo_frame_tag "journal_#{journal.id}_date_range" do %>
          <p class="mb-2 dark:text-gray-300">
            <b>From:</b>
            <%= journal.journal_entries.minimum(:date)&.strftime("%b %d, %Y") %> - <%= journal.journal_entries.maximum(:date)&.strftime("%b %d, %Y") %>
          </p>
        <% end %>
      <% end %>
    </div>
    <%= turbo_frame_tag "journal_#{journal.id}_description" do %>
      <strong class="dark:text-gray-200">Description:</strong> <%= link_to edit_journal_path(journal, field: :description), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      <% end %>
      <div class="dark:text-gray-200">
        <%= journal.description.present? ? journal.description : content_tag(:span, "Click to add description", class: "text-gray-400 dark:text-gray-500 italic") %>
      </div>
    <% end %>
  </div>
</div>