<table class="w-full table-auto border-collapse">
  <thead>
    <tr>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Project</th>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Teachers</th>
      <th class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-200">Lessons</th>
    </tr>
  </thead>
  <tbody>
    <% @student.assignments.each do |assignment| %>
      <tr>
        <td class="text-left px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= link_to assignment.composition.name, assignment, class:"text-blue-500 hover:text-red-500 dark:text-blue-400 dark:hover:text-red-400" %></td>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= assignment.teachers.uniq.map(&:name).join(', ') %></td>
        <td class="px-3 py-2 border-b border-gray-300 dark:border-gray-600 dark:text-gray-300"><%= assignment.lessons.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>