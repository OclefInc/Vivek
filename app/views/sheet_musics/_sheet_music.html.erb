<div id="<%= dom_id sheet_music %>" class="w-full sm:w-auto my-5 space-y-5">
  <div class="flex">
    <div>
      <%= link_to sheet_music.composition.name, sheet_music.composition %>
    </div>
    <div>
      <strong>Info:</strong>
      <%= sheet_music.info %>
    </div>
    <%= image_tag sheet_music.pdf_file if sheet_music.pdf_file.attached? %>
  </div>
</div>
</div>
