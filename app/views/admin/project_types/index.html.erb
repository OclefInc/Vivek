<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-gray-100">Project Types</h1>
  </div>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @project_types.each do |project_type| %>
        <li>
          <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex flex-col">
                <p class="text-sm font-medium text-indigo-600 dark:text-indigo-400 truncate">
                  <%= project_type.name %>
                </p>
                <% if project_type.description.present? %>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                    <%= project_type.description %>
                  </p>
                <% end %>
              </div>
              <div class="flex space-x-2">
                <%= link_to "Edit", edit_project_type_path(project_type), class: "text-sm text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
