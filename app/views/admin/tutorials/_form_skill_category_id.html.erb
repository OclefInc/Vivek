<%= turbo_frame_tag "tutorial_#{@tutorial.id}_skill_category" do %>
  <%= form_with(model: @tutorial, url: tutorial_path(@tutorial, {format: :html}), data:{ turbo_frame: '_top'}) do |form| %>
    <div class="mb-4">
      <%= form.collection_select :skill_category_id, SkillCategory.order(:name), :id, :name,
                { prompt: "Select a skill category..." },
                { class: "block shadow rounded-md border border-gray-200 dark:border-gray-600 outline-none px-3 py-2 mt-2 mb-4 w-full dark:bg-gray-800 dark:text-gray-200" } %>
      <div class="mt-2 flex gap-2">
        <%= form.submit "Save", class: "px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white rounded-lg text-sm font-medium cursor-pointer" %>
        <%= link_to "Cancel", tutorial_path(@tutorial), class: "px-2 py-1 bg-gray-100 dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 rounded-lg text-sm font-medium dark:text-gray-200" %>
      </div>
    </div>
  <% end %>
<% end %>
