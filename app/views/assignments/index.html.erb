<p style="color: green"><%= notice %></p>

<% content_for :title, "Assignments" %>

<h1 class="text-2xl text-red-400">Assignments</h1>
<table class="w-full text-left text-gray-500">
  <tr>
    <th>Student</th>
    <th>Teacher</th>
    <th>Composition</th>
  </tr> 
  <% @assignments.each do |assignment| %>
  <tr>
    <td><%= link_to assignment.student.name, assignment, class:"text-blue-500 hover:text-red-500"    %></td>
    <td><%= assignment.teacher.name %></td>
    <td><%= assignment.composition.name %></td>
  </tr>
   <% end %>
</table>


<%= link_to "New assignment", new_assignment_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
