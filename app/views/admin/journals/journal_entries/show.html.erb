  <div class="md:-mx-5 py-4 xl:min-w-[640px] md:flex-1 md:basis-1/2 md:px-5 xl:max-w-[640px]">
    <%= render 'journal_entry_video', journal_entry: @journal_entry %>
    <%= render @journal_entry %>
