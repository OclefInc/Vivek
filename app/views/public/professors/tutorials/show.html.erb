<% content_for :title, "Tutorial" %>
<div class="flex flex-col items-center max-w-7xl mx-auto ">
  <%= render 'header', tutorial: @tutorial %>
  <div class="xl:flex xl:gap-8 py-4">
    <div class="xl:min-w-[640px] xl:max-w-[640px] md:flex-1 md:basis-1/2 mb-4 xl:mb-0">
      <div class="rounded-lg overflow-hidden shadow-sm">
        <div class="bg-gray-800 rounded overflow-hidden">
          <turbo-frame id="tutorial_<%= @tutorial.id %>_video_file">
            <%= render 'video_file', tutorial: @tutorial %>
          </turbo-frame>
          <%= render @tutorial %>
        </div>
      </div>
      <!-- Comments Section -->
      <div class="w-full mt-8">
        <turbo-frame id="comments_module" src="<%= comments_path(annotation_type: @tutorial.class.name, annotation_id: @tutorial.id) %>"></turbo-frame>
      </div>
    </div>
    <div class="hidden xl:block w-full xl:flex-1 xl:basis-1/2 xl:self-start overflow-y-auto rounded-lg overflow-hidden shadow-sm">
      <%= render 'chapters_table', chapters_tutorials: @tutorial.chapters_tutorials %>
    </div>
  </div>
</div>