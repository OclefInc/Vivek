<div data-controller="search-toggle">
  <%= form_with url: assignments_path, method: :get, data: { turbo_frame: "assignments-table", turbo_action: "advance" } do |form| %>
    <div class="flex flex-col xl:flex-row justify-between items-start xl:items-center gap-4 mb-4">
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 flex-1 w-full">
        <div class="relative w-full sm:w-auto">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <%= form.text_field :query,
                  value: params[:query],
                  id: "table-search",
                  data: { search_toggle_target: "input" },
                  class: "block p-2 pl-10 text-sm text-gray-700 border border-gray-300 rounded-xl w-full md:w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-gray-200 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500",
                  placeholder: "Search for projects",
                  oninput: "this.form.requestSubmit()" %>
        </div>
        <div class="flex items-center gap-2 w-full sm:w-auto">
          <label for="teacher_filter" class="text-sm font-medium text-gray-700 dark:text-gray-300 whitespace-nowrap">Filter by Teacher:</label>
          <%= form.select :teacher_id,
          options_for_select([["All Teachers", ""]] + @teachers.map { |t| [t.name, t.id] }, @selected_teacher_id),
          {},
          { id: "teacher_filter", class: "block rounded-md border border-gray-300 dark:border-gray-600 px-3 py-2 text-sm dark:bg-gray-800 dark:text-gray-200", onchange: "this.form.requestSubmit()" } %>
        </div>
      </div>
      <%= link_to new_assignment_path, class: "p-2 bg-blue-600 hover:bg-blue-400 text-white rounded-lg self-start xl:self-auto" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      <% end %>
    </div>
  <% end %>
</div>