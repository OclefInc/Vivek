<div class="flex flex-col items-center">
  <div class="mb-8 text-center">
    <p class="text-center text-xl text-sky-800 dark:text-teal-200 text-bold" > Welcome to The Vivek Project! </p>
    <p class="text-center text-md text-sky-800 dark:text-teal-300 " > Bringing teachers together to document real-life pedagogy. </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-7xl px-4">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "block" do %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <!-- Profile Picture Section with Animated Lesson Names Background -->
          <div class="relative bg-gradient-to-br from-sky-400 to-blue-500 dark:from-gray-600 dark:to-gray-700 flex flex-col items-center justify-center py-8 overflow-hidden" style="min-height: 240px;">
            <!-- Animated lesson/chapter/tutorial names background -->
            <% if project.lessons.any? %>
              <div class="absolute inset-0 overflow-hidden opacity-20">
                <%
                  all_names = []
                  project.lessons.order(:sort).each do |lesson|
                    all_names << lesson.name
                    lesson.chapters.each do |chapter|
                      all_names << chapter.name
                      all_names += chapter.tutorials.pluck(:name) if chapter.tutorials.any?
                    end
                  end
                  all_names.uniq!
                  total_duration = all_names.length * 3
                %>
                <% all_names.each_with_index do |name, index| %>
                  <div class="absolute text-white font-semibold text-center opacity-0"
                       style="animation: fade-in-out <%= total_duration %>s ease-in-out infinite; animation-delay: <%= index * 3 %>s; font-size: <%= 14 + (index * 7) % 12 %>px; top: <%= 20 + (index * 37) % 60 %>%; left: <%= 10 + (index * 43) % 80 %>%; transform: translate(-50%, -50%);">
                    <%= name %>
                  </div>
                <% end %>
              </div>
            <% end %>
            <!-- Student profile (above background) -->
            <div class="relative z-10">
              <div class="flex flex-col items-center">
                <div class="rounded-full overflow-hidden w-20 h-20 border-2 border-white shadow-lg flex items-center justify-center">
                  <% if project.student.profile_picture&.attached? %>
                    <%= image_tag project.student.profile_picture.variant(resize_to_fill: [80, 80]), class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center bg-white">
                      <div class="aspect-square w-[80px] overflow-hidden">
                        <svg class="text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                          <circle cx="12" cy="8" r="4"/>
                          <path d="M2 19c0-2.5 4-5 10-5s10 2.5 10 5v5H2v-5z"/>
                        </svg>
                      </div>
                    </div>
                  <% end %>
                </div>
                <p class="text-white font-semibold text-center text-sm mt-2">
                  <%= project.student.name %>
                </p>
              </div>
            </div>
          </div>
          <!-- Summary Section -->
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"><%= project.composition.name %></h3>
            <div class="space-y-1 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                </svg>
                <span><%= pluralize(project.lessons.count, 'episode') %></span>
              </div>
              <% if project.lessons.any? %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                  </svg>
                  <span>
                    <%= project.lessons.minimum(:date)&.strftime('%b %d, %Y') || 'No date' %>
                    <% if project.lessons.minimum(:date) != project.lessons.maximum(:date) %>
                      - <%= project.lessons.maximum(:date)&.strftime('%b %d, %Y') %>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>