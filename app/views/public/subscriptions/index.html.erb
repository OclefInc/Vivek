<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">My Subscriptions</h1>
  <% if @assignments.any? || @journals.any? %>
    <% if @assignments.any? %>
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Projects</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @assignments.each do |project| %>
          <%= render "home/project_card", project: project %>
        <% end %>
      </div>
    <% end %>
    <% if @journals.any? %>
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Journals</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @journals.each do |journal| %>
          <%= render "home/journal_card", journal: journal %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12 bg-gray-50 dark:bg-gray-800 rounded-lg">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto text-gray-400 mb-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No subscriptions yet</h3>
      <p class="text-gray-500 dark:text-gray-400 mb-6">Subscribe to ongoing projects and journals to get notified when new content is added.</p>
      <%= link_to "Browse Projects", root_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
