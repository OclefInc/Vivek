<div id="<%= dom_id @episode %>">
  <div class="md:-mx-5 px-6 xl:px-5 xl:pb-5 xl:mt-5">
    <div class="md:flex md:-mx-5">
      <div class="md:flex-1 md:basis-1/2 md:px-5 text-slate-700 dark:text-slate-300">
        <% if @episode.lesson_video.attached? %>
          <div class="bg-black p-2 rounded-2xl flex items-center justify-center w-full" style="max-width: 640px; aspect-ratio: 4/3;">
            <%= video_tag @episode.lesson_video, style: "width: 100%; height: 100%; object-fit: contain;", controls: true, class: "rounded-lg" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-bold text-slate-700 dark:text-slate-300 px-4 py-2 w-full" style="max-width: 640px;">
      <div class="my-3">
        <p class="font-bold text-sky-800 dark:text-teal-200 mb-2">Skills:</p>
        <div class="flex flex-wrap gap-2">
          <% @episode.skills.each do |skill| %>
            <%= link_to skill_path(skill), class: "inline-flex items-center px-3 py-1.5 bg-sky-100 dark:bg-zinc-800 border-2 border-sky-200 dark:border-zinc-700 rounded-lg hover:border-green-400/60 dark:hover:border-green-400/60 transition-colors" do %>
              <span class="text-sm font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300"><%= skill.name %></span>
            <% end %>
          <% end %>
        </div>
      </div>
      <p class="my-2 text-slate-700 dark:text-slate-300">
        <%= @episode.description %>
      </p>
    </div>
  </div>
</div>