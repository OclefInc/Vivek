<table class="w-full table-auto border-collapse">
    <thead>
      <tr>
        <th class="text-left md:px-3 py-2 border-b border-gray-300">Assignment</th>
        <th class="text-left md:px-3 py-2 border-b border-gray-300">Teachers</th>
      </tr>
    </thead>
    <tbody>
      <% @student.assignments.each do |assignment| %>
        <tr>
          <td class="text-left md:px-3 py-2 border-b border-gray-300"><%= link_to assignment.composition.name, assignment, class:"text-blue-500 hover:text-red-500" %></td>
          <td class="text-left md:px-3 py-2 border-b border-gray-300"><%= assignment.teachers.map(&:name).join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>