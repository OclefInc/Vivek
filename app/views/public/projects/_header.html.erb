<div class="">
  <!-- Composition Name - Full width on mobile -->
  <div class="mb-4 text-center">
    <p class="text-slate-900 dark:text-teal-200 text-xl sm:text-2xl font-medium  break-words">
      <%= @project.composition.name %>
    </p>
  </div>
  <!-- Student and Teachers Info - Stack on mobile, side by side on larger screens -->
  <p class="text-slate-700 dark:text-slate-300 text-sm sm:text-base lg:text-lg  text-center">
    <strong class="font-semibold">Student:</strong>
    <%= link_to @project.student.name, public_student_path(@project.student), class:'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
  </p>
</div>