<div class="flex flex-row justify-center">
  <div class="border-sky-300 border-2 shadow-lg bg-sky-50 rounded-xl px-5 py-5 ">
    <h2 class="text-center text-2xl tracking-widest">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["block w-full bg-white shadow-sm rounded-xl px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900", ] %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: ["block w-full bg-white shadow-sm rounded-xl px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900", ] %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ["block w-full bg-white shadow-sm rounded-xl px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900", ] %>
      </div>
      <div class="actions text-center py-2">
        <%= f.submit "Submit", class: "w-full sm:w-auto rounded-xl px-3 py-2 bg-indigo-400 hover:bg-indigo-200 text-white inline-block font-medium cursor-pointer text-center tracking-wide" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
