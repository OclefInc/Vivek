<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500">
  <div class="p-6">
    <div class="flex flex-col items-center">
      <div class="w-24 h-24 rounded-full overflow-hidden mb-4 border border-gray-200 dark:border-gray-700">
        <% if user.cropped_avatar(size: 200) %>
          <%= image_tag user.cropped_avatar(size: 200), alt: user.name, class: "w-full h-full object-cover" %>
        <% elsif user.picture_url.present? %>
          <%= image_tag user.picture_url, alt: user.name, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
            <span class="text-white text-3xl font-bold"><%= user.initials || user.email&.first&.upcase %></span>
          </div>
        <% end %>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 text-center mb-2">
        <%= user.name || 'No Name' %>
      </h3>
      <p class="text-sm text-gray-600 dark:text-gray-400 text-center mb-3 truncate w-full px-2">
        <%= user.email %>
      </p>
      <span class="inline-block px-3 py-1 text-xs font-medium rounded-full <%= user.account_type == 'admin' ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' : 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' %>">
        <%= user.account_type&.titleize || 'User' %>
      </span>
    </div>
  </div>
</div>