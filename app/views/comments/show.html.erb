<% content_for :title, "Comment" %>
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>
<h1 class="text-3xl text-semibold dark:text-gray-200">Comment:</h1>
<div class="flex justify-between ">
  <div class="my-6">
    <div class="flex justify-between">
      <div class="px-3 text-gray-500 dark:text-gray-400"> <%= @comment.user.email %> </div>
      <div class="text-gray-400 dark:text-gray-500 px-3 justify-end"> <%= local_time(@comment.created_at) %> </div>
    </div>
    <div class="px-3 dark:text-gray-300"> <%= @comment.note %> </div>
  </div>
  <div class="ml-4 flex items-start justify-end gap-2">
    <%= link_to "All comments", comments_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3 py-2 bg-gray-100 hover:bg-gray-50 dark:bg-gray-700 dark:hover:bg-gray-600 inline-block font-medium" %>
    <% if @comment.is_published? %>
      <%= button_to "Unpublish", @comment, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3 py-2 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    <% else %>
      <%= button_to "Republish", @comment, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3 py-2 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>
<%= @comment.annotation_id %>