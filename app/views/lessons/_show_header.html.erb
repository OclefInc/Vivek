<div class="flex justify-between items-center">
  <!-- Mobile: Split Button with Lesson Dropdown -->
  <div class="xl:hidden relative flex items-center flex-1" x-data="{ open: false }">
    <span class="font-bold text-2xl dark:text-gray-200">
      <span data-controller="inline-edit"
            data-inline-edit-url-value="<%= lesson_path(@lesson) %>"
            data-inline-edit-field-value="name"
            class="inline-block">
        <span data-inline-edit-target="display"
              data-action="click->inline-edit#edit"
          class="cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 px-1 rounded underline decoration-wavy decoration-blue-400 dark:decoration-blue-400"><%= @lesson.name %></span>
        <input data-inline-edit-target="input"
               type="text"
               value="<%= @lesson.name %>"
               data-action="keydown->inline-edit#save blur->inline-edit#blur"
        class="hidden border border-gray-300 dark:border-gray-600 rounded px-2 py-1 font-bold text-2xl dark:bg-gray-800 dark:text-gray-200" />
      </span>
    </span>
    <button @click="open = !open"
            type="button"
            class="ml-2 px-3 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 flex-shrink-0">
      <svg class="w-5 h-5 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <!-- Lesson Dropdown Menu -->
    <div x-show="open"
         @click.away="open = false"
         x-transition:enter="transition ease-out duration-100"
         x-transition:enter-start="transform opacity-0 scale-95"
         x-transition:enter-end="transform opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75"
         x-transition:leave-start="transform opacity-100 scale-100"
         x-transition:leave-end="transform opacity-0 scale-95"
         class="absolute left-0 top-full mt-2 w-full max-w-sm bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 z-50 max-h-96 overflow-y-auto"
         style="display: none;">
      <div class="py-1">
        <div class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase border-b border-gray-200 dark:border-gray-700">
          All Lessons
        </div>
        <% @assignment.lessons.order(:sort).each do |lesson| %>
          <%= link_to lesson_path(lesson),
              class: "block px-4 py-2 text-sm hover:bg-gray-100 dark:hover:bg-gray-700 #{lesson.id == @lesson.id ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 font-medium' : 'text-gray-700 dark:text-gray-300'}" do %>
            <div class="flex items-center justify-between">
              <span><%= lesson.name %></span>
              <% if lesson.id == @lesson.id %>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Desktop: Regular Title -->
  <span class="hidden xl:block font-bold text-2xl dark:text-gray-200">
    <%= turbo_frame_tag "lesson_#{@lesson.id}_name" do %>
      <span><%= @lesson.name %></span> <%= link_to edit_lesson_path(@lesson, field: :name), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      <% end %>
    <% end %>
  </span>
  <div class="ml-2 flex items-center justify-end gap-1">
    <div class="relative" data-controller="dropdown" data-action="click@window->dropdown#hide">
      <button type="button"
              data-action="click->dropdown#toggle"
        class="w-full sm:w-auto text-center rounded-lg px-3 py-2 mx-1 bg-gray-100 hover:bg-gray-50 dark:bg-gray-700 dark:hover:bg-gray-600 inline-flex items-center gap-1 font-medium"
        title="Edit">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 dark:text-gray-300">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 dark:text-gray-300">
          <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
        </svg>
      </button>
      <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black dark:ring-gray-700 ring-opacity-5 z-10">
        <div class="py-1">
          <%= link_to edit_lesson_path(@lesson), class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
            Edit Lesson
          <% end %>
          <%= link_to edit_lesson_path(@lesson, field: :lesson_video), class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700", data: { turbo_frame: "lesson_#{@lesson.id}_lesson_video", action: "click->dropdown#toggle" } do %>
            Edit Video
          <% end %>
          <%= button_to @lesson, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700", data: { turbo_confirm: "Are you sure?" }, title: "Delete", form_class: "w-full" do %>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>