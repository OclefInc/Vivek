<% content_for :title, "Students" %>
<div class="max-w-7xl mx-auto space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <div class="bg-sky-50 dark:bg-zinc-900 px-6 pt-6 pb-3">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl text-sky-800 dark:text-teal-200 font-bold">Students</h1>
        <%= form_with url: students_path, method: :get, data: { turbo_frame: "students-table", turbo_action: "advance" } do |form| %>
          <%= form.text_field :query,
                value: params[:query],
                id: "table-search",
                class: "block p-2 ps-10 text-sm text-gray-700 border border-gray-300 rounded-xl w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                placeholder: "Search for students",
                oninput: "this.form.requestSubmit()" %>
        <% end %>
      </div>
    </div>
    <div class="bg-sky-50 dark:bg-zinc-900 p-6">
      <table class="w-full bg-white dark:bg-zinc-800 shadow rounded-2xl overflow-hidden">
        <thead class="bg-sky-100 dark:bg-zinc-700">
          <tr>
            <th class="text-left text-sky-800 dark:text-teal-200 font-semibold px-3 py-2 border-b border-sky-200 dark:border-zinc-600">Name</th>
            <th class="text-left text-sky-800 dark:text-teal-200 font-semibold px-3 py-2 border-b border-sky-200 dark:border-zinc-600">Number of Assignments</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td class="px-3 py-2 border-b border-sky-200 dark:border-zinc-600"><%= link_to student.name, student_path(student), class:"text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300 px-1 py-1" %></td>
              <td class="px-3 py-2 border-b border-sky-200 dark:border-zinc-600 text-slate-700 dark:text-slate-300"><%= student.assignments.length %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
