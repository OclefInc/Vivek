<div id="<%= dom_id skill %>" class="flex w-full justify-between my-5 space-y-5 text-sky-800 dark:text-teal-300">
  <div class="w-32 sm:flex-auto flex-initial mx-4 my-2">
    <span class="font-semibold text-xl text-sky-800 dark:text-teal-300">  <%= skill.name %> </span>
  </div>
  <div class="flex-auto mx-2 my-2">
    <p class="text-sky-700 dark:text-teal-400">Skill category:</p>
    <span class="font-semibold text-sky-800 dark:text-teal-300"> <%= skill.skill_category.name %> </span>
  </div>
  <div class="flex-auto mx-2 my-2">
    <strong class="block font-medium mb-1 text-sky-700 dark:text-teal-400">Number of Lessons:</strong>
    <span class="text-sky-800 dark:text-teal-300"><%= skill.lessons.count %></span>
  </div>
</div>
