<div id="<%= dom_id sheet_music %>" class="w-full sm:w-auto my-5 space-y-5">
  <div class="flex items-start " >
    <embed src="<%= rails_blob_path(sheet_music.pdf_file) %>" width="35%" height="234" />
    <div class="flex-col py-4 px-4" >
      <div class="px-4 py-4">
        <%= link_to sheet_music.composition.name, sheet_music.composition, class: 'text-semibold text-nowrap' %>
      </div>
      <div class="px-4 py-4">
        <strong>Info:</strong>
        <%= sheet_music.info %>
      </div>
    </div>
  </div>
</div>