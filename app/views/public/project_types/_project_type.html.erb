<% cache project_type do %>
  <section class="bg-gray-100 dark:bg-gray-800 p-6  rounded-lg border-2 border-blue-200 dark:border-indigo-700">
    <div class="flex items-center gap-3 mb-4">
      <div class="text-indigo-600 dark:text-indigo-400">
        <%= project_type_icon(project_type) %>
      </div>
      <h2 class="text-2xl font-bold text-sky-800 dark:text-teal-200 m-0"><%= project_type.name %></h2>
    </div>
    <div class="description">
      <%= project_type.description %>
    </div>
    <div class="text-center mt-6">
      <% if project_type.assignments.any? %>
        <%= link_to("View #{pluralize(project_type.assignments.count, "Project")}", public_project_type_path(project_type), class: "inline-block px-6 py-2 rounded-full bg-indigo-600 text-white hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors duration-200 font-semibold no-underline", style: "font-family: ui-sans-serif, system-ui, sans-serif !important;") %>
      <% else %>
        <span class="inline-block px-6 py-2 rounded-full bg-gray-400 text-white font-semibold" style="font-family: ui-sans-serif, system-ui, sans-serif !important;">Projects Coming Soon!</span>
      <% end %>
    </div>
  </section>
<% end %>