<div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg p-6 mb-6">
  <h2 class="text-2xl font-bold text-sky-800 dark:text-teal-300 mb-2">Project Summary</h2>
  <div class="mb-2">
    <strong>Composition:</strong>
    <%= link_to project.composition.name, public_composition_path(project.composition), class: 'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
  </div>
  <div class="mb-2">
    <strong>Student:</strong>
    <%= link_to project.student.name, public_student_path(project.student), class: 'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
  </div>
  <div class="mb-2">
    <strong>Teachers:</strong>
    <% project.teachers.uniq.each do |teacher| %>
      <%= link_to teacher.name, professor_path(teacher), class: 'text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300' %>
    <% end %>
  </div>
  <div class="mb-2">
    <strong>Description:</strong>
    <%= project.description %>
  </div>
</div>
<div class="border border-gray-300 dark:border-gray-600 rounded p-4 dark:bg-gray-800">
  <p class="text-sky-700 dark:text-teal-400">
    <strong>Project:</strong>
    <%= link_to @project.composition.name, composition_path(@project.composition), class:'text-indigo-500 hover:text-indigo-300 text-2xl' %>
  </p>
  <p class="text-sky-700 dark:text-teal-400">
    <strong>Student:</strong>
    <%= link_to @project.student.name, student_path(@project.student), class:'font-semibold text-indigo-500 hover:text-indigo-300' %>
  </p>
</div>