<div id="<%= dom_id assignment %>" class="md:flex-1 md:basis-1/2 md:px-5 xl:max-w-[640px]">
  <%= turbo_frame_tag "assignment_#{assignment.id}_summary_video" do %>
    <% if assignment.summary_video.attached? %>
      <div class="bg-black flex items-center justify-center aspect-[4/3] xl:aspect-auto xl:max-w-[640px] xl:h-[480px] relative"
           data-controller="video-poster">
        <%= video_tag assignment.summary_video,
          controls: true,
          preload: "metadata",
          class: "w-full h-full object-contain",
          data: {
            controller: "video-autoplay",
            video_autoplay_next_url_value: assignment.first_lesson ? lesson_path(assignment.first_lesson) : nil,
            video_autoplay_next_name_value: assignment.first_lesson&.name,
            video_autoplay_next_date_value: assignment.first_lesson&.date&.strftime("%B %d, %Y"),
            video_poster_target: "video"
          } %>
        <div data-video-poster-target="overlay" class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none  bg-black">
          <h2 class="text-white text-3xl font-bold text-center px-8"><%= assignment.composition.name %></h2>
          <p class="text-gray-300 text-xl mt-3"><%= assignment.student.name %></p>
          <% if assignment.lessons.any? %>
            <p class="text-gray-400 text-lg mt-2">
              <%= assignment.lessons.minimum(:date)&.strftime("%b %d, %Y") %> - <%= assignment.lessons.maximum(:date)&.strftime("%b %d, %Y") %>
            </p>
            <p class="text-gray-400 text-lg mt-1">
              <%= assignment.lessons.count %> <%= 'Lesson'.pluralize(assignment.lessons.count) %>
            </p>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to edit_assignment_path(@assignment, field: :summary_video), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm" do %>
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg> Video</span>
        <% end %>
      </div>
    <% else %>
      <div class="bg-black flex items-center justify-center aspect-[4/3] xl:aspect-auto xl:max-w-[640px] xl:h-[480px]">
        <%= form_with(model: assignment) do |form| %>
          <div class="dropzone dropzone-default dz-clickable border  border-gray-300 rounded p-4" data-controller="dropzone" data-dropzone-max-file-size="10000000" data-dropzone-accepted-files="video/*" data-turbo-permanent>
            <%= form.file_field :summary_video, direct_upload: true, data: { 'dropzone-target': "input", 'dropzone-capture-mode-value': 'environment', autosubmit: true, turbosubmit: nil, camera: false } %>
            <div class="dropzone-msg dz-message needsclick">
              <h2>No Video Summary Uploaded</h2>
              <h3 class="dropzone-msg-title">Drag Video Summary File Here</h3>
              <span class="dropzone-msg-desc">Click To Browse</span>
            </div>
          </div>
          <%= form.submit class: "w-full sm:w-auto rounded-lg my-2 px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <div class="my-1">
    <p class="mb-2 dark:text-gray-300">
      <%= turbo_frame_tag "assignment_#{assignment.id}_student" do %>
        <b>Student: </b><%= link_to edit_assignment_path(assignment, field: :student), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
        <%= assignment.student.name %>
      <% end %>
    </p>
    <%= turbo_frame_tag "assignment_#{assignment.id}_description" do %>
      <strong class="dark:text-gray-200">Description:</strong> <%= link_to edit_assignment_path(assignment, field: :description), class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm inline-flex items-center", title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      <% end %>
      <div class="dark:text-gray-200">
        <%= assignment.description.present? ? assignment.description : content_tag(:span, "Click to add description", class: "text-gray-400 dark:text-gray-500 italic") %>
      </div>
    <% end %>
    <p class="mb-2 mt-2 dark:text-gray-300">
      <b><%= 'Teacher'.pluralize(assignment.teachers.uniq.count) %>:</b>
      <%= assignment.teachers.uniq.map{|teacher| teacher.name}.join(", ") %>
    </p>
    <div class="flex justify-between items-center mt-4">
      <p class="mb-2 dark:text-gray-300">
        <b>Lessons:</b>
        <%= assignment.lessons.count %>
      </p>
      <% if assignment.lessons.any? %>
        <%= turbo_frame_tag "assignment_#{assignment.id}_date_range" do %>
          <p class="mb-2 dark:text-gray-300">
            <b>From:</b>
            <%= assignment.lessons.minimum(:date)&.strftime("%b %d, %Y") %> - <%= assignment.lessons.maximum(:date)&.strftime("%b %d, %Y") %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <p class="mb-2 dark:text-gray-300">
    <b>Music:</b>
  </p>
  <% assignment.existing_description_attachments.each do |attachment| %>
    <p class="flex items-center" data-controller="copyright-modal" data-attachment-id="<%= attachment[:blob].signed_id %>">
      <turbo-frame id="<%= "copyright_modal_#{attachment[:blob].signed_id }" %>"></turbo-frame>
      <%= link_to rails_blob_path(attachment[:blob], disposition: "attachment"),
                target: "_blank",
                rel: "noopener noreferrer",
                class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300"  do %>
        <%= attachment[:filename] %>
      <% end %>
      <% if attachment[:description_copyrighted] %>
        <span class="relative group ml-1 flex items-center"  data-action="click->copyright-modal#open" >
          <svg class="inline w-4 h-4 text-red-500 ml-1 align-middle" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2C5.58 2 2 5.58 2 10s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm0-10c-2.21 0-4 1.79-4 4h2a2 2 0 1 1 4 0c0 1.1-.9 2-2 2-.55 0-1-.45-1-1H7c0 1.65 1.35 3 3 3s3-1.35 3-3-1.35-3-3-3z"/>
          </svg>
          <span class="absolute left-full top-1/2 -translate-y-1/2 ml-2 px-2 py-1 rounded bg-gray-900 text-white text-xs opacity-0 group-hover:opacity-100 transition pointer-events-none whitespace-nowrap z-10">
            Copyrighted Material: Do Not Distribute
          </span>
        </span>
      <% else %>
        <span class="relative group ml-1"   data-action="click->copyright-modal#open" >
          <svg class="inline w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 24 24">
            <rect x="2" y="4" width="20" height="16" rx="3" fill="currentColor"/>
            <text x="12" y="16" text-anchor="middle" font-size="10" fill="#fff" font-family="Arial, Helvetica, sans-serif">MIT</text>
          </svg>
          <span class="absolute left-full top-1/2 -translate-y-1/2 ml-2 px-2 py-1 rounded bg-gray-900 text-white text-xs opacity-0 group-hover:opacity-100 transition pointer-events-none whitespace-nowrap z-10">
            Under MIT License: Free to Distribute
          </span>
        </span>
      <% end %>
    </p>
  <% end %>
</div>