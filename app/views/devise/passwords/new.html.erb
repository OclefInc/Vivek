<div class="flex flex-row justify-center">
  <div class="border-sky-300 bg-sky-50 dark:border-sky-800 border-2 shadow-lg dark:bg-zinc-900 rounded-xl px-5 py-5">
    <h2 class="text-2xl text-sky-800 dark:text-sky-300 text-center tracking-wide">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ["block w-full bg-white shadow-sm rounded-xl px-3 py-2 mt-2 focus:outline-none focus:ring-0 focus:border-blue-900",] %>
      </div>
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "sm:w-auto w-full mt-2 tracking-wide rounded-xl px-3 py-2 bg-red-800 hover:bg-red-600 text-white inline-block font-sm cursor-pointer" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
