<% content_for :title, "Sheet musics" %>
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>
<div class="flex justify-between items-center mb-6">
  <span class="text-2xl text-bold text-sky-800 dark:text-teal-300">
    Scores for 
    <%= link_to @composition.name, display_composition_path(@composition), class: 'text-2xl text-bold text-blue-600 hover:text-blue-400 hover:text-bold' %>
    (<%= @composition.composer %>)
  </span>
</div>
<div id="sheet_musics" class="min-w-full divide-y divide-gray-200 space-y-5">
  <% if @sheet_musics.any? %>
    <% @sheet_musics.each do |sheet_music| %>
      <div class="flex flex-col sm:flex-row justify-between items-start pb-5 sm:pb-0">
        <%= render sheet_music %>
        <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          <%= link_to "View", display_sheet_music_path(sheet_music), 
          class: "rounded-xl px-3 py-2 border-2 border-neutral-900 bg-cyan-500 hover:border-2 hover:bg-cyan-300 hover:border-cyan-500 font-medium whitespace-nowrap" 
          %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-orange-700 my-10">No sheet musics found.</p>
  <% end %>
</div>
