<turbo-frame id="comment_<%= comment.id %>">
  <div class="my-6 w-full">
    <div class="flex justify-between items-start mb-2">
      <div class="flex items-center gap-2">
        <%= user_avatar(comment.user, size: 24) %>
        <% if comment.user.is_teacher? %>
          <div class="text-sm text-bold text-sky-700 dark:text-teal-500"> <%= link_to comment.user.name, professor_path(comment.user.teacher), data: { turbo_frame: "_top" } %> </div>
          <span class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">Contributor</span>
        <% elsif comment.user.is_student? %>
          <div class="text-sm text-bold text-sky-700 dark:text-teal-500"> <%= link_to comment.user.name, student_path(comment.user.student), data: { turbo_frame: "_top" }  %> </div>
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Student</span>
        <% else %>
          <div class="text-sm text-bold text-sky-700 dark:text-teal-500"> <%= comment.user.name %> </div>
        <% end %>
        <div class="text-zinc-400 text-xs"> <%= time_ago_in_words(comment.created_at) %> ago </div>
      </div>
      <div class="flex items-center gap-3">
        <% if signed_in? %>
          <div class="flex items-center gap-1 text-xs">
            <% like = comment.likes.find { |l| l.user_id == current_user.id } %>
            <% if like %>
              <%= button_to like_path(like), method: :delete, class: "flex items-center gap-1 text-pink-500 hover:text-pink-600 bg-transparent border-0 p-0 cursor-pointer" do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                  <path d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
                </svg>
                <span><%= comment.likes.size %></span>
              <% end %>
            <% else %>
              <%= button_to likes_path, params: { like: { likeable_id: comment.id, likeable_type: "Comment" } }, class: "flex items-center gap-1 text-zinc-400 hover:text-pink-500 bg-transparent border-0 p-0 cursor-pointer" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                </svg>
                <span><%= comment.likes.size %></span>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="flex items-center gap-1 text-zinc-400 text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
            <span><%= comment.likes.size %></span>
          </div>
        <% end %>
        <% if current_user == comment.user %>
          <div class="flex gap-2 text-xs">
            <%= link_to edit_comment_path(comment), class: "text-indigo-400 hover:text-indigo-600 dark:hover:text-indigo-300", title: "Edit" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
            <% end %>
            <%= button_to comment_path(comment), method: :delete, class: "text-red-400 hover:text-red-600 dark:hover:text-red-300 bg-transparent border-0 p-0 cursor-pointer", form: { data: { turbo_confirm: "Are you sure?" } }, title: "Delete" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%
      relevant_teacher_ids = []
      if comment.annotation.is_a?(Assignment)
        relevant_teacher_ids = comment.annotation.teacher_ids + [comment.annotation.teacher_id]
      elsif comment.annotation.is_a?(Lesson)
        relevant_teacher_ids = comment.annotation.assignment.teacher_ids + [comment.annotation.assignment.teacher_id]
      end
      relevant_teacher_ids = relevant_teacher_ids.compact.uniq
      is_relevant_teacher = comment.user.teacher.present? && relevant_teacher_ids.include?(comment.user.teacher.id)
    %>
    <div class="dark:text-teal-200 text-sky-400 <%= is_relevant_teacher ? 'border border-indigo-300 bg-indigo-50 dark:border-indigo-700 dark:bg-indigo-900/30 p-3 rounded-lg shadow-sm' : '' %>"> <%= comment.note %> </div>
  </div>
</turbo-frame>
