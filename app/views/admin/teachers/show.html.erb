<% content_for :title, "Teacher" %>
<%= render 'show_header' %>
<div class="xl:flex xl:gap-8">
  <div class="py-4 xl:min-w-[480px]  xl:max-w-[480px]">
    <%= render 'profile_picture', teacher: @teacher %>
    <%= render @teacher %>
    <%= render 'projects_table' %>
  </div>
  <div class="w-full py-4 xl:flex-1 xl:basis-1/2 xl:px-5 md:-mx-5 ">
    <div class="mt-10 flex items-center justify-between">
      <h4 class="font-bold text-xl dark:text-gray-200">Presentations</h4>
      <%= link_to new_tutorial_path({ teacher_id: @teacher.id }),
      class: "text-blue-600 hover:text-blue-500",
      title: "Add Presentation" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      <% end %>
    </div>
    <%= render 'tutorials_table', teacher: @teacher %>
  </div>
</div>