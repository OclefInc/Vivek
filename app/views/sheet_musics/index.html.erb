<% content_for :title, "Sheet musics" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= link_to @composition.name, @composition %>
  <div class="flex justify-between items-center">
    <h3 class="font-bold text-4xl">Scores</h3>
    <%= link_to "Add New Score", new_sheet_music_path({composition_id:@composition.id}), class: "rounded-lg px-3 py-2 bg-blue-600 hover:bg-blue-400 text-white block font-medium" %>
  </div>
  <div id="sheet_musics" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @sheet_musics.any? %>
      <% @sheet_musics.each do |sheet_music| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render sheet_music %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "View", sheet_music, class: "w-full sm:w-auto text-center rounded-lg px-3 py-2 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_sheet_music_path(sheet_music), class: "w-full sm:w-auto text-center rounded-lg px-3 py-2 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Delete", sheet_music, method: :delete, class: "w-full sm:w-auto rounded-lg px-3 py-2 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No sheet musics found.</p>
    <% end %>
  </div>
</div>
