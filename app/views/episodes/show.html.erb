<div class="max-w-7xl mx-auto space-y-6 font-sans">
  <!-- Main Episode Card -->
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-sky-50 to-blue-50 dark:from-zinc-900 dark:to-zinc-800 px-6 pt-6 pb-1">
      <%= render 'header' %>
    </div>
    <div class="bg-sky-50 dark:bg-zinc-900 xl:flex xl:gap-6 p-6">
      <%= render 'video_description' %>
      <%= render 'episode_table' %>
    </div>
  </div>
  <!-- Comments Section -->
  <div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <%= render partial:"/comments/module", locals:{annotation:@episode} %>
  </div>
</div>
