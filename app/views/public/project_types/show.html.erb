<% content_for :title, "Project Type: #{@project_type.name}" %>
<div class="">
  <div class="mb-4 text-center">
    <p class="text-slate-900 dark:text-teal-200 text-2xl font-bold sm:text-2xl font-medium  break-words">
      <%= @project_type.name %>
    </p>
  </div>
  <div class="mb-8 text-slate-800 dark:text-white text-center text-lg max-w-lg mx-auto">
    <%= @project_type.description %>
  </div>
</div>
<div class="flex overflow-x-auto gap-3 lg:gap-6 w-full px-1 md:px-4 mb-8 pb-4 snap-x">
  <% @project_type.assignments.each do |project| %>
    <div class="w-[300px] md:w-[350px] flex-none snap-center">
      <%= render 'home/project_card', project: project %>
    </div>
  <% end %>
</div>