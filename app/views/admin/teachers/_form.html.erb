<%= form_with(model: teacher, class: "contents") do |form| %>
  <% if teacher.errors.any? %>
    <div id="error_explanation" class="bg-red-50 dark:bg-red-900 text-red-500 dark:text-red-200 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>
      <ul class="list-disc ml-6">
        <% teacher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name, class: "dark:text-gray-200" %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full dark:bg-gray-800 dark:text-gray-200", {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": teacher.errors[:name].none?, "border-red-400 dark:border-red-600 focus:outline-red-600": teacher.errors[:name].any?}] %>
  </div>
  <div>
    <%= form.label :bio, class: "dark:text-gray-200", style: "display: block" %>
    <%= form.rich_text_area :bio,
      class: "block shadow rounded-md border border-gray-200 dark:border-gray-600 outline-none px-3 py-2 mt-2 w-full dark:bg-gray-800 dark:text-gray-200" %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
