<div id="<%= dom_id teacher %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <%= image_tag teacher.profile_picture if teacher.profile_picture.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= teacher.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">City:</strong>
    <%= teacher.city %>
  </div>
  <p>
    <strong>Bio:</strong>
    <%= teacher.bio %>
  </p>
</div>
